{
  checkConnection();
  do {
    boolean locked=acquireExclusiveLock();
    try {
      writeCommand(OChannelBinaryProtocol.DB_EXIST);
      readStatus();
      return network.readByte() == 1;
    }
 catch (    Exception e) {
      if (handleException("Error on checking if the database exists",e))       break;
    }
 finally {
      releaseExclusiveLock(locked);
    }
  }
 while (true);
  return false;
}
