{
  if (recording < 0)   return -1;
  long now=System.currentTimeMillis();
  OChrono c=chronos.get(iName);
  if (c == null) {
    c=new OChrono();
    chronos.put(iName,c);
  }
  c.name=iName;
  c.items++;
  c.lastElapsed=now - iStartTime;
  c.totalElapsed+=c.lastElapsed;
  c.averageElapsed=c.totalElapsed / c.items;
  if (c.lastElapsed < c.minElapsed)   c.minElapsed=c.lastElapsed;
  if (c.lastElapsed > c.maxElapsed)   c.maxElapsed=c.lastElapsed;
  return c.lastElapsed;
}
