{
  if (pool != null) {
    final OResourcePool<String,OrientBaseGraph> closingPool=pool;
    pool=null;
    int usedResources=0;
    for (    OrientExtendedGraph g : closingPool.getResources()) {
      usedResources++;
      g.shutdown();
    }
    OLogManager.instance().debug(this,"Maximum used resources: %d",usedResources);
    closingPool.close();
  }
}
