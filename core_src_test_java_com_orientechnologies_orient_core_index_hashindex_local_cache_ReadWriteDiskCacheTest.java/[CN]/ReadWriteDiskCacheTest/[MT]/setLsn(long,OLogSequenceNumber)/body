{
  ODirectMemory directMemory=ODirectMemoryFactory.INSTANCE.directMemory();
  OIntegerSerializer.INSTANCE.serializeInDirectMemory(lsn.getSegment(),directMemory,dataPointer + OIntegerSerializer.INT_SIZE + OLongSerializer.LONG_SIZE);
  OLongSerializer.INSTANCE.serializeInDirectMemory(lsn.getPosition(),directMemory,dataPointer + 2 * OIntegerSerializer.INT_SIZE + OLongSerializer.LONG_SIZE);
}
