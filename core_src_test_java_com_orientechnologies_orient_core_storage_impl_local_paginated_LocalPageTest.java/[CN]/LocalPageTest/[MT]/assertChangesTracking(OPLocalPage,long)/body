{
  long restoredPagePointer=directMemory.allocate(new byte[OPLocalPage.PAGE_SIZE]);
  try {
    OPLocalPage restoredPage=new OPLocalPage(restoredPagePointer,false,OAbstractPLocalPage.TrackMode.BOTH);
    restoredPage.restoreChanges(localPage.getPageChanges());
    Assert.assertEquals(directMemory.get(restoredPagePointer + SYSTEM_OFFSET,OPLocalPage.PAGE_SIZE - SYSTEM_OFFSET),directMemory.get(pagePointer + SYSTEM_OFFSET,OPLocalPage.PAGE_SIZE - SYSTEM_OFFSET));
    List<OFullPageDiff<?>> changes=new ArrayList<OFullPageDiff<?>>();
    for (    OPageDiff<?> pageDiff : localPage.getPageChanges())     changes.add((OFullPageDiff<?>)pageDiff);
    restoredPage.revertChanges(changes);
    Assert.assertEquals(directMemory.get(restoredPagePointer + SYSTEM_OFFSET,OPLocalPage.PAGE_SIZE - SYSTEM_OFFSET),new byte[OPLocalPage.PAGE_SIZE - SYSTEM_OFFSET]);
  }
  finally {
    directMemory.free(restoredPagePointer);
  }
}
