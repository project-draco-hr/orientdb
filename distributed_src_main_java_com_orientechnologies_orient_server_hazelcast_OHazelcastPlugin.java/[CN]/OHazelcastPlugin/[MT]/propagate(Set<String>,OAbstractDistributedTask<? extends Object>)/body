{
  final Map<String,Object> result=new HashMap<String,Object>();
  ODistributedServerLog.info(this,iTask.getNodeSource(),iNodeIds.toString(),DIRECTION.OUT,"propagate %s oper=%d.%d",iTask.getName().toUpperCase(),iTask.getRunId(),iTask.getOperationSerial());
  for (  String nodeId : iNodeIds) {
    final Member m=remoteClusterNodes.get(nodeId);
    if (m == null)     ODistributedServerLog.warn(this,getLocalNodeId(),nodeId,DIRECTION.OUT,"cannot propagate operation on remote member because is disconnected");
 else     result.put(nodeId,sendOperation2Node(nodeId,iTask));
  }
  return result;
}
