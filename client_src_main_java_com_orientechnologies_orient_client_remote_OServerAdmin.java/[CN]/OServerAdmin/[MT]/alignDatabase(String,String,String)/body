{
  OLogManager.instance().debug(this,"Started the alignment of database '%s' from server '%s' to '%s' with options %s",iDatabaseName,storage.getURL(),iRemoteServer,iOptions);
  final ODocument response=sendRequest(OChannelBinaryProtocol.REQUEST_REPLICATION,new ODocument().field("operation","align").field("node",iRemoteServer).field("db",iDatabaseName).field("options",iOptions),"Align databases");
  OLogManager.instance().debug(this,"Alignment finished");
  return this;
}
