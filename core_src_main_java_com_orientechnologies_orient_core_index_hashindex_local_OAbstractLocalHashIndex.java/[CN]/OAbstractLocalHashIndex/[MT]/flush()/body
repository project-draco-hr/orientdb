{
  acquireExclusiveLock();
  try {
    if (metadataStore.getFile().isOpen()) {
      storeMetadata();
      metadataStore.close();
    }
    if (treeStateStore.getFile().isOpen()) {
      storeHashTree();
      treeStateStore.close();
    }
    for (    OEHFileMetadata metadata : filesMetadata)     if (metadata != null)     metadata.getFile().close();
  }
 catch (  IOException e) {
    throw new OIndexException("Error during index save",e);
  }
 finally {
    releaseExclusiveLock();
  }
}
