{
  if (record == null || this == pTree.getRoot())   return 0;
  int freed=0;
  if (getDepthInMemory() >= iDepthLevel)   freed=disconnectLinked(false);
 else {
    if (left != null)     freed+=left.disconnect(iDepthLevel);
    if (right != null)     freed+=right.disconnect(iDepthLevel);
  }
  return freed;
}
