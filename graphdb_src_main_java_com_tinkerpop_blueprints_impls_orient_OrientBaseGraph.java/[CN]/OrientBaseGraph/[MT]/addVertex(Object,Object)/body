{
  makeActive();
  String className=null;
  String clusterName=null;
  Object[] fields=null;
  if (id != null) {
    if (id instanceof String) {
      final String[] args=((String)id).split(",");
      for (      String s : args) {
        if (s.startsWith(CLASS_PREFIX))         className=s.substring(CLASS_PREFIX.length());
 else         if (s.startsWith(CLUSTER_PREFIX))         clusterName=s.substring(CLUSTER_PREFIX.length());
 else         id=s;
      }
    }
    if (settings.saveOriginalIds)     fields=new Object[]{OrientElement.DEF_ORIGINAL_ID_FIELDNAME,id};
  }
  autoStartTransaction();
  final OrientVertex vertex=new OrientVertex(className,fields);
  vertex.setProperties(prop);
  if (clusterName != null)   vertex.save(clusterName);
 else   vertex.save();
  return vertex;
}
