{
  if (iParameters.length == 0)   return now;
  if (format == null) {
    format=new SimpleDateFormat((String)iParameters[0]);
    if (iParameters.length == 2)     format.setTimeZone(TimeZone.getTimeZone(iParameters[1].toString()));
 else     format.setTimeZone(ODateHelper.getDatabaseTimeZone());
  }
  return format.format(now);
}
