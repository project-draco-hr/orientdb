{
  StringBuilder result=new StringBuilder();
  if (Boolean.TRUE.equals(star)) {
    result.append("*");
  }
 else {
    if (leftDepth != null) {
      result.append("[");
      result.append(leftDepth.toString());
      result.append("]");
    }
    boolean first=true;
    for (    String s : fieldChain) {
      if (!first) {
        result.append(".");
      }
      result.append(s);
      first=false;
    }
  }
  result.append(":");
  result.append(rightDepth.toString());
  return result.toString();
}
