{
  return new Iterator<T>(){
    private int index=0;
    @Override public boolean hasNext(){
      while (!completed) {
        if (index < size())         return true;
        waitForNewItemOrCompleted();
      }
      return index < size();
    }
    @Override public T next(){
      while (!completed) {
        if (index < size())         break;
        waitForNewItemOrCompleted();
      }
      if (index > size())       throw new NoSuchElementException("Error on browsing at element " + index + " while the resultset contains only "+ size()+ " items");
      return underlying.get(index++);
    }
    @Override public void remove(){
      throw new UnsupportedOperationException("OResultSet.iterator.remove()");
    }
  }
;
}
