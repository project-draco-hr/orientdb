{
  checkConnection();
  do {
    try {
      OChannelBinaryClient network=null;
      try {
        network=beginRequest(OChannelBinaryProtocol.REQUEST_DATACLUSTER_DROP);
        network.writeShort((short)iClusterId);
      }
  finally {
        endRequest(network);
      }
      try {
        beginResponse(network);
        if (network.readByte() == 1) {
          for (          Entry<String,Integer> entry : clustersIds.entrySet())           if (entry.getValue() != null && entry.getValue().intValue() == iClusterId) {
            clustersIds.remove(entry.getKey());
            clustersTypes.remove(entry.getKey());
            if (configuration.clusters.size() > iClusterId)             configuration.dropCluster(iClusterId);
            break;
          }
          getLevel2Cache().freeCluster(iClusterId);
          return true;
        }
        return false;
      }
  finally {
        endResponse(network);
      }
    }
 catch (    Exception e) {
      handleException("Error on removing of cluster",e);
    }
  }
 while (true);
}
