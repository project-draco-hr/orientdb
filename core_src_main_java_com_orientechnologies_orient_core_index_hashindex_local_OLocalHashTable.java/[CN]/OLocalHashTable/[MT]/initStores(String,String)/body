{
  final OStorageFileConfiguration metadataConfiguration=new OStorageFileConfiguration(null,OStorageVariableParser.DB_PATH_VARIABLE + '/' + name+ metadataConfigurationFileExtension,OFileFactory.CLASSIC,"0","50%");
  final OStorageFileConfiguration treeStateConfiguration=new OStorageFileConfiguration(null,OStorageVariableParser.DB_PATH_VARIABLE + '/' + name+ treeStateFileExtension,OFileFactory.CLASSIC,"0","50%");
  metadataStore=new OHashIndexBufferMetadataStore(storage,metadataConfiguration);
  treeStateStore=new OHashIndexTreeStateStore(storage,treeStateConfiguration);
}
