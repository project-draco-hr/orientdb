{
  addUser();
  level2cache.startup();
  boolean locked=lock.acquireExclusiveLock();
  try {
    if (open)     return;
    userName=iUserName;
    userPassword=iUserPassword;
    openRemoteDatabase();
    configuration=new OStorageConfiguration(this);
    configuration.load();
  }
 catch (  Exception e) {
    close();
    if (e instanceof OException)     throw (OException)e;
 else     throw new OStorageException("Can't open the remote storage: " + name,e);
  }
 finally {
    lock.releaseExclusiveLock(locked);
  }
}
