{
  if (!(iBadResponse instanceof List)) {
    ODistributedServerLog.debug(this,getNodeSource(),null,DIRECTION.NONE,"error on creating undo-task for request: '%s' because bad response is not expected type: %s",iRequest,iBadResponse);
    return null;
  }
  final OFixTxTask fixTask=new OFixTxTask();
  for (int i=0; i < tasks.size(); ++i) {
    final OAbstractRecordReplicatedTask t=tasks.get(i);
    fixTask.add(t.getUndoTask(iRequest,((List<Object>)iBadResponse).get(i)));
  }
  return fixTask;
}
