{
  if (value == null)   return;
  final T[] values=Arrays.copyOf(value,value.length);
  Arrays.sort(values,0,values.length,new Comparator<T>(){
    @Override public int compare(    T one,    T two){
      final int indexOne;
      if (one == null)       indexOne=0;
 else       indexOne=index(one.hashCode());
      final int indexTwo;
      if (two == null)       indexTwo=0;
 else       indexTwo=index(two.hashCode());
      if (indexOne > indexTwo)       return 1;
      if (indexOne < indexTwo)       return -1;
      return 0;
    }
  }
);
  for (  T val : values) {
    acquireExclusiveLock(val);
  }
}
