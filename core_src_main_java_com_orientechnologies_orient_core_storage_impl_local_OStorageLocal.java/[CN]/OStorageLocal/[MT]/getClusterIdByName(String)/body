{
  checkOpeness();
  if (iClusterName == null)   throw new IllegalArgumentException("Cluster name is null");
  if (iClusterName.length() == 0)   throw new IllegalArgumentException("Cluster name is empty");
  if (Character.isDigit(iClusterName.charAt(0)))   return Integer.parseInt(iClusterName);
  OCluster segment;
  lock.acquireSharedLock();
  try {
    segment=clusterMap.get(iClusterName.toLowerCase());
  }
  finally {
    lock.releaseSharedLock();
  }
  if (segment != null)   return segment.getId();
  return -1;
}
