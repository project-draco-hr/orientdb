{
  final OStorageFileConfiguration metadataConfiguration=new OStorageFileConfiguration(null,OStorageVariableParser.DB_PATH_VARIABLE + '/' + name+ metadataConfigurationFileExtension,OFileClassic.NAME,"0","50%");
  final OStorageFileConfiguration treeStateConfiguration=new OStorageFileConfiguration(null,OStorageVariableParser.DB_PATH_VARIABLE + '/' + name+ treeStateFileExtension,OFileClassic.NAME,"0","50%");
  metadataStore=new OHashIndexBufferStore(storage,metadataConfiguration);
  treeStateStore=new OHashIndexTreeStateStore(storage,treeStateConfiguration);
}
