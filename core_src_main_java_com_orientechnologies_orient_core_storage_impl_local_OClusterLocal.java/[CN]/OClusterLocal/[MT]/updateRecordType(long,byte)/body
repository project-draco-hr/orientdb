{
  iPosition=iPosition * RECORD_SIZE;
  acquireSharedLock();
  try {
    final long[] pos=fileSegment.getRelativePosition(iPosition);
    fileSegment.files[(int)pos[0]].writeByte(pos[1] + OBinaryProtocol.SIZE_SHORT + OBinaryProtocol.SIZE_LONG,iRecordType);
  }
  finally {
    releaseSharedLock();
  }
}
