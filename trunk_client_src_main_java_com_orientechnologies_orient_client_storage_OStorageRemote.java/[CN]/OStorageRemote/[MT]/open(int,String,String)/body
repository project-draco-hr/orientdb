{
  boolean locked=acquireExclusiveLock();
  try {
    userName=iUserName;
    userPassword=iUserPassword;
    openRemoteDatabase();
    addUser();
  }
 catch (  Exception e) {
    close();
    OLogManager.instance().error(this,"Can't open the remote storage: " + name,e,OStorageException.class);
  }
 finally {
    releaseExclusiveLock(locked);
  }
}
