{
  if (user != null) {
    try {
      user.allow(resourceGeneric,resourceSpecific,iOperation);
    }
 catch (    OSecurityAccessException e) {
      if (OLogManager.instance().isDebugEnabled())       OLogManager.instance().debug(this,"[checkSecurity] User '%s' tried to access the reserved resource '%s', operation '%s'",getUser(),resourceGeneric + "." + resourceSpecific,iOperation);
      throw e;
    }
  }
  return (DB)this;
}
