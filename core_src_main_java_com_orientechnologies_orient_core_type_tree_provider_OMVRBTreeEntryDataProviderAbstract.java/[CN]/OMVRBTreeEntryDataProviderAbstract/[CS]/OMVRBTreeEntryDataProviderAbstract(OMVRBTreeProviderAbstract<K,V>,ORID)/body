{
  treeDataProvider=iTreeDataProvider;
  parentRid=new ORecordId();
  leftRid=new ORecordId();
  rightRid=new ORecordId();
  record=(ORecordBytesLazy)new ORecordBytesLazy(this);
  if (iRID != null) {
    ORecordInternal.setIdentity(record,iRID.getClusterId(),iRID.getClusterPosition());
    if (treeDataProvider.storage == null)     load(OMVRBTreeProviderAbstract.getDatabase());
 else     load(treeDataProvider.storage);
  }
 else   ORecordInternal.setIdentity(record,new ORecordId());
  if (record.getIdentity().isNew() || record.getIdentity().isTemporary())   ORecordListenerManager.addListener(record,this);
}
