{
  if (position >= buffer.length)   return -1;
  int newLen;
  if (position + len >= buffer.length)   newLen=buffer.length - position;
 else   newLen=len;
  if (off + newLen >= b.length)   newLen=b.length - off;
  if (newLen <= 0)   return 0;
  System.arraycopy(buffer,position,b,off,newLen);
  position+=newLen;
  return newLen;
}
