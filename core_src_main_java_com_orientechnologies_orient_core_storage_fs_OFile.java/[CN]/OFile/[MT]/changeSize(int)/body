{
  if (iSize > Integer.MAX_VALUE)   OLogManager.instance().error(this,"You can't upsize the file more than 2GB",OIOException.class);
  if (OLogManager.instance().isDebugEnabled())   OLogManager.instance().debug(this,"Changing file size to " + iSize + " bytes. "+ toString());
  if (iSize < filledUpTo)   OLogManager.instance().error(this,"You can't size down the file to " + iSize + " bytes, since it's minor of than current space used: "+ filledUpTo+ " bytes",OIOException.class);
}
