{
  if (iItem == null || !(iItem instanceof OSQLFilterItemField))   return null;
  OSQLFilterItemField item=(OSQLFilterItemField)iItem;
  final OProperty prop=iSchemaClass.getProperty(item.getName());
  if (prop != null && prop.isIndexed()) {
    if (((prop.getIndex() instanceof OPropertyIndexUnique || prop.getIndex() instanceof OPropertyIndexNotUnique) && iCondition.getOperator() instanceof OQueryOperatorEquals) || prop.getIndex() instanceof OFullTextIndex && iCondition.getOperator() instanceof OQueryOperatorContainsText) {
      final Object value=iCondition.getLeft() == iItem ? iCondition.getRight() : iCondition.getLeft();
      if (value != null) {
        final List<ORecordId> records=prop.getIndex().get(value.toString());
        if (records != null && records.size() > 0)         iResultSet.addAll(records);
      }
    }
  }
  return iResultSet;
}
