{
  if (metadata != null) {
    if (metadata.containsField("ignoreChars"))     ignoreChars=metadata.field("ignoreChars");
    if (metadata.containsField("indexRadix"))     indexRadix=metadata.field("indexRadix");
    if (metadata.containsField("separatorChars"))     separatorChars=metadata.field("separatorChars");
    if (metadata.containsField("minWordLength"))     minWordLength=metadata.field("minWordLength");
    if (metadata.containsField("stopWords"))     stopWords=new HashSet<String>((Collection<? extends String>)metadata.field("stopWords"));
  }
}
