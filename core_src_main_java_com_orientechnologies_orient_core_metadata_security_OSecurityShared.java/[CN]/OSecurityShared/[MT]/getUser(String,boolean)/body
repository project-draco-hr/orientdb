{
  if (iUserName == null)   return null;
  List<ODocument> result;
  try {
    result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from OUser where name = '" + iUserName + "' limit 1").setFetchPlan("roles:1")).execute();
    if (iUserName.equalsIgnoreCase("admin") && result.isEmpty()) {
      if (iAllowRepair)       repair();
      result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from OUser where name = '" + iUserName + "' limit 1").setFetchPlan("roles:1")).execute();
    }
  }
 catch (  OSecurityException e) {
    throw e;
  }
catch (  Exception e) {
    if (iAllowRepair)     repair();
    result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from OUser where name = '" + iUserName + "' limit 1").setFetchPlan("roles:1")).execute();
  }
  if (result != null && !result.isEmpty())   return new OUser(result.get(0));
  return null;
}
