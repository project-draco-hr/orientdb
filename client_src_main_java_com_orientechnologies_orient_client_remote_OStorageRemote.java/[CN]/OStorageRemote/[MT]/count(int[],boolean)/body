{
  checkConnection();
  do {
    try {
      OChannelBinaryClient network=null;
      try {
        network=beginRequest(OChannelBinaryProtocol.REQUEST_DATACLUSTER_COUNT);
        network.writeShort((short)iClusterIds.length);
        for (        int iClusterId : iClusterIds)         network.writeShort((short)iClusterId);
        if (network.getSrvProtocolVersion() >= 13)         network.writeByte(countTombstones ? (byte)1 : (byte)0);
      }
  finally {
        endRequest(network);
      }
      try {
        beginResponse(network);
        return network.readLong();
      }
  finally {
        endResponse(network);
      }
    }
 catch (    Exception e) {
      handleException("Error on read record count in clusters: " + Arrays.toString(iClusterIds),e);
    }
  }
 while (true);
}
