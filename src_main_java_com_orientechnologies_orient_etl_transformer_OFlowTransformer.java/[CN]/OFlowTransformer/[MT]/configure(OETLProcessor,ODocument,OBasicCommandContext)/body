{
  super.configure(iProcessor,iConfiguration,iContext);
  operation=iConfiguration.field("operation");
  if (operation == null)   throw new OConfigurationException("Flow transformer has not mandatory 'operation' field");
  if (!operation.equalsIgnoreCase("halt") && !operation.equalsIgnoreCase("halt"))   throw new OConfigurationException("Flow transformer has invalid 'operation' field='" + operation + "', while supported are: 'skip' and 'halt'");
}
