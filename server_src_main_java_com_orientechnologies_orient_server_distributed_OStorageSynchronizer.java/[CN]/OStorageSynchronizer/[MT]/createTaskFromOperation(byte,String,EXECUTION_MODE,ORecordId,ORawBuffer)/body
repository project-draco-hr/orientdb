{
  final OAbstractDistributedTask<?> task;
switch (iOperation) {
case ORecordOperation.CREATED:
    task=new OCreateRecordDistributedTask(currentNodeId,storageName,iMode,rid,record.buffer,record.version,record.recordType);
  break;
case ORecordOperation.UPDATED:
task=new OUpdateRecordDistributedTask(currentNodeId,storageName,iMode,rid,record.buffer,record.version,record.recordType);
break;
case ORecordOperation.DELETED:
task=new ODeleteRecordDistributedTask(currentNodeId,storageName,iMode,rid,record.version);
break;
default :
throw new ODistributedException("Error on creating distributed task: Found not supported operation with code " + iOperation);
}
return task.setRedistribute(false);
}
