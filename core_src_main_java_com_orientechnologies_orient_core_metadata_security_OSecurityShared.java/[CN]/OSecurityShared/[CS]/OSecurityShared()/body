{
  final int maxCachedUsers=OGlobalConfiguration.SECURITY_MAX_CACHED_USERS.getValueAsInteger();
  if (maxCachedUsers > 0)   cachedUsers=new ConcurrentLinkedHashMap.Builder<String,OUser>().maximumWeightedCapacity(maxCachedUsers).build();
 else   cachedUsers=null;
  final int maxCachedRoles=OGlobalConfiguration.SECURITY_MAX_CACHED_ROLES.getValueAsInteger();
  if (maxCachedRoles > 0)   cachedRoles=new ConcurrentLinkedHashMap.Builder<String,ORole>().maximumWeightedCapacity(maxCachedRoles).build();
 else   cachedRoles=null;
}
