{
  if (roles == null || roles.isEmpty())   throw new OSecurityAccessException(document.getDatabase().getName(),"User '" + document.field("name") + "' has no role defined");
  final ORole role=checkIfAllowed(iResource,iOperation);
  if (role == null)   throw new OSecurityAccessException(document.getDatabase().getName(),"User '" + document.field("name") + "' has no the permission to execute the operation '"+ ORole.permissionToString(iOperation)+ "' against the resource: "+ iResource);
  return role;
}
