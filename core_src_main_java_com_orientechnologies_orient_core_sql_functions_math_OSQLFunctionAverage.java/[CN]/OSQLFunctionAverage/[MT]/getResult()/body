{
  if (returnDistributedResult()) {
    if (sum instanceof Integer)     return "i" + sum.intValue() + "/"+ total;
 else     if (sum instanceof Long)     return "l" + sum.longValue() + "/"+ total;
 else     if (sum instanceof Float)     return "f" + sum.floatValue() + "/"+ total;
 else     if (sum instanceof Double)     return "d" + sum.doubleValue() + "/"+ total;
  }
 else {
    if (sum instanceof Integer)     return sum.intValue() / total;
 else     if (sum instanceof Long)     return sum.longValue() / total;
 else     if (sum instanceof Float)     return sum.floatValue() / total;
 else     if (sum instanceof Double)     return sum.doubleValue() / total;
  }
  return null;
}
