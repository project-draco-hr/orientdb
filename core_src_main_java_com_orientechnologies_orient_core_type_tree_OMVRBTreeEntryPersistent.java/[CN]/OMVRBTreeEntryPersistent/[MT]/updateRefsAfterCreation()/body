{
  final ORID rid=dataEntry.getIdentity();
  if (left != null) {
    if (left.dataEntry.setParent(rid))     left.markDirty();
  }
  if (right != null) {
    if (right.dataEntry.setParent(rid))     right.markDirty();
  }
  if (parent != null) {
    if (parent.left == this) {
      if (parent.dataEntry.setLeft(rid))       parent.markDirty();
    }
 else     if (parent.right == this) {
      if (parent.dataEntry.setRight(rid))       parent.markDirty();
    }
 else {
      OLogManager.instance().error(this,"[save]: Tree inconsistent entries.");
    }
  }
 else   if (pTree.getRoot() == this) {
    if (pTree.dataTree.setRoot(rid))     pTree.markDirty();
  }
}
