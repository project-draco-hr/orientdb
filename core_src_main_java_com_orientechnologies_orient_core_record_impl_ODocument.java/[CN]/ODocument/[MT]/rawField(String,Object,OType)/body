{
  if (_fieldValues == null)   _fieldValues=_ordered ? new LinkedHashMap<String,Object>() : new HashMap<String,Object>();
  if (_fieldTypes == null)   _fieldTypes=new HashMap<String,OType>();
  _fieldValues.put(iFieldName,iFieldValue);
  addCollectionChangeListener(iFieldName,iFieldValue);
  if (iFieldType != null)   _fieldTypes.put(iFieldName,iFieldType);
}
