{
  if (flush)   flush();
  if (!commitExecutor.isShutdown()) {
    commitExecutor.shutdown();
    try {
      if (!commitExecutor.awaitTermination(10000,TimeUnit.MILLISECONDS))       throw new OStorageException("WAL flush task for " + getPath() + " segment can not be stopped.");
    }
 catch (    InterruptedException e) {
      OLogManager.instance().error(this,"Can not shutdown background WAL commit thread.");
    }
  }
}
