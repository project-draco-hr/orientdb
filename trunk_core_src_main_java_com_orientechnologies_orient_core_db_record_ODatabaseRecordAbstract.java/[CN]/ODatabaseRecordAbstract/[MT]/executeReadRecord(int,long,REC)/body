{
  checkOpeness();
  try {
    checkSecurity(OUser.CLUSTER + "." + iClusterId,OUser.READ);
    final Object[] recordBuffer=underlying.read(iClusterId,iPosition);
    if (recordBuffer == null)     return null;
    iRecord.unsetDirty();
    iRecord.fill(iRecord.getDatabase(),iClusterId,iPosition,(Integer)recordBuffer[1]);
    iRecord.fromStream((byte[])recordBuffer[0]);
    iRecord.setStatus(STATUS.LOADED);
    return (REC)iRecord;
  }
 catch (  ODatabaseException e) {
    throw e;
  }
catch (  Throwable t) {
    OLogManager.instance().error(this,"Error on retrieving record #" + iPosition + " in cluster '"+ getStorage().getPhysicalClusterNameById(iClusterId)+ "'",t,ODatabaseException.class);
  }
  return null;
}
