{
  if (iMessage == null)   return;
  final Logger log=Logger.getLogger(iRequester.getClass().getName());
  final StringBuilder buffer=new StringBuilder();
  buffer.append('\n');
  buffer.append(dateFormat.format(new Date()));
  buffer.append(' ');
  buffer.append(iLevel.getName().substring(0,4));
  if (iRequester != null) {
    buffer.append(" [");
    buffer.append(iRequester.getClass().getSimpleName());
    buffer.append("]");
  }
  buffer.append(' ');
  try {
    buffer.append(String.format(iMessage,iAdditionalArgs));
  }
 catch (  Exception e) {
    buffer.append(iMessage);
  }
  if (iException != null)   log.log(iLevel,buffer.toString(),iException);
 else   log.log(iLevel,buffer.toString());
}
