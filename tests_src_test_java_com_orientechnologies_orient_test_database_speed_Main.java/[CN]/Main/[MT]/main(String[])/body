{
  final Scanner scanner=new Scanner(System.in);
  for (; ; ) {
    try {
      final int rowCount=askForInt("Please provide the number of rows to insert, then hit ENTER (press 'Q' or 'q' to terminate):",scanner);
      final int colCount=askForInt("Please provide the number of columns to insert, then hit ENTER (press 'Q' or 'q' to terminate):",scanner);
      final int lazyUpdates=askForInt("Please provide the lazyUpdates param value, then hit ENTER (press 'Q' or 'q' to terminate):",scanner);
      work(rowCount,colCount,lazyUpdates);
    }
 catch (    final ExitRequestException e) {
      return;
    }
catch (    IOException e) {
      e.printStackTrace(System.err);
    }
  }
}
