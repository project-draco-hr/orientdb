{
  checkConnection();
  if (OStorageRemoteThreadLocal.INSTANCE.get().commandExecuting)   return null;
  do {
    try {
      OChannelBinaryClient network=null;
      try {
        network=beginRequest(OChannelBinaryProtocol.REQUEST_RECORD_LOAD);
        network.writeRID(iRid);
        network.writeString(iFetchPlan != null ? iFetchPlan : "");
      }
  finally {
        endRequest(network);
      }
      try {
        beginResponse(network);
        if (network.readByte() == 0)         return null;
        final ORawBuffer buffer=new ORawBuffer(network.readBytes(),network.readInt(),network.readByte());
        final ODatabaseRecord database=ODatabaseRecordThreadLocal.INSTANCE.getIfDefined();
        ORecordInternal<?> record;
        while (network.readByte() == 2) {
          record=(ORecordInternal<?>)OChannelBinaryProtocol.readIdentifiable(network);
          if (database != null)           database.getLevel1Cache().updateRecord(record);
        }
        return buffer;
      }
  finally {
        endResponse(network);
      }
    }
 catch (    OException e) {
      throw e;
    }
catch (    Exception e) {
      handleException("Error on read record " + iRid,e);
    }
  }
 while (true);
}
