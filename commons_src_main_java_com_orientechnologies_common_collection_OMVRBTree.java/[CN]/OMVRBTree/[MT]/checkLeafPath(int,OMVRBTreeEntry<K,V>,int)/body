{
  if (colorOf(node) == BLACK)   blackPathLength++;
  if (node != null) {
    checkLeafPath(blackPathToCompare,node.getLeft(),blackPathLength);
    checkLeafPath(blackPathToCompare,node.getRight(),blackPathLength);
  }
 else   if (blackPathLength != blackPathToCompare) {
    OLogManager.instance().error(this,"[OMVRBTree.checkTreeStructure] Amount of black nodes from the root to any leaf" + " should always be the same ! Expected amount of nodes %d, actual amount %d\n",blackPathToCompare,blackPathLength);
    printInMemoryStructure(root);
  }
}
