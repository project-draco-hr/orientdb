{
  if (concurrent)   if (timeout > 0) {
    try {
      if (lock.writeLock().tryLock(timeout,TimeUnit.MILLISECONDS))       return;
    }
 catch (    InterruptedException e) {
      if (ignoreThreadInterruption) {
        try {
          if (lock.writeLock().tryLock(timeout,TimeUnit.MILLISECONDS)) {
            Thread.currentThread().interrupt();
            return;
          }
        }
 catch (        InterruptedException e2) {
        }
      }
      throw new OLockException("Thread interrupted while waiting for resource of class '" + getClass() + "' with timeout="+ timeout);
    }
    throw new OTimeoutException("Timeout on acquiring exclusive lock against resource of class: " + getClass() + " with timeout="+ timeout);
  }
 else   lock.writeLock().lock();
}
