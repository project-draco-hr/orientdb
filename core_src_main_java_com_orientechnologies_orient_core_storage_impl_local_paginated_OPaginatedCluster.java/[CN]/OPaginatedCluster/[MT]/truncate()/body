{
  storageLocal.checkForClusterPermissions(getName());
  externalModificationLock.requestModificationLock();
  try {
    acquireExclusiveLock();
    try {
      OAtomicOperation atomicOperation;
      if (config.useWal)       atomicOperation=startAtomicOperation();
 else       atomicOperation=storage.getAtomicOperationsManager().getCurrentOperation();
      truncateFile(atomicOperation,fileId,diskCache);
      clusterPositionMap.truncate();
      initCusterState();
      if (config.useWal)       endAtomicOperation(false);
    }
 catch (    Throwable e) {
      if (config.useWal)       endAtomicOperation(true);
      throw new OStorageException(null,e);
    }
 finally {
      releaseExclusiveLock();
    }
  }
  finally {
    externalModificationLock.releaseModificationLock();
  }
}
