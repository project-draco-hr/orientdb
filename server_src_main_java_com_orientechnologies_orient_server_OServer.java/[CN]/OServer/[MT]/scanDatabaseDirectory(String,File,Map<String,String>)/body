{
  if (iDirectory.exists() && iDirectory.isDirectory()) {
    for (    File db : iDirectory.listFiles()) {
      if (db.isDirectory()) {
        final File f=new File(db.getAbsolutePath() + "/default.odh");
        if (f.exists())         iStorages.put(db.getPath().substring(iRootDirectory.length()),"local:" + db.getPath());
 else         scanDatabaseDirectory(iRootDirectory,db,iStorages);
      }
    }
  }
}
