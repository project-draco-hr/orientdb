{
  iFieldName=iFieldName.toUpperCase();
  Object result=null;
  if (iFieldName.charAt(0) == '@') {
    if (iFieldName.equals("@THIS"))     result=iRecord;
 else     if (iFieldName.equals("@RID"))     result=iRecord.getIdentity();
 else     if (iFieldName.equals("@VERSION"))     result=iRecord.getVersion();
 else     if (iFieldName.equals("@CLASS") && iRecord instanceof ORecordSchemaAware<?>)     result=((ORecordSchemaAware<?>)iRecord).getClassName();
 else     if (iFieldName.equals("@TYPE"))     result=ORecordFactory.getRecordTypeName(iRecord.getRecordType());
 else     if (iFieldName.equals("@FIELDS") && iRecord instanceof ORecordSchemaAware<?>)     result=((ORecordSchemaAware<?>)iRecord).fieldNames();
 else     if (iFieldName.equals("@SIZE")) {
      final byte[] stream=iRecord.toStream();
      if (stream != null)       result=stream.length;
    }
  }
  return result;
}
