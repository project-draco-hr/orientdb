{
  discoverySignaler=new OClusterDiscoverySignaler(this,clusterNetworkListener);
  Orient.getTimer().schedule(new TimerTask(){
    @Override public void run(){
synchronized (this) {
        try {
          discoverySignaler.sendShutdown();
