{
  super("Distributed-DB");
  manager=OServerMain.server().getHandler(ODistributedServerManager.class);
  if (manager == null)   throw new OConfigurationException("Can't find a ODistributedServerDiscoveryManager instance registered as handler. Check the server configuration in the handlers section.");
  Orient.getTimer().schedule(new ODistributedServerLoaderChecker(manager,this),manager.getNetworkHeartbeatDelay(),manager.getNetworkHeartbeatDelay() / 2);
}
