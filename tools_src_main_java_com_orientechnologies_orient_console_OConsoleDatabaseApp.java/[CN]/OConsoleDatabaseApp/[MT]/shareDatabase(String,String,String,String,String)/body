{
  try {
    if (serverAdmin == null)     throw new IllegalStateException("You must be connected to a remote server to share a database");
    serverAdmin.shareDatabase(iDatabaseName,iDatabaseUserName,iDatabaseUserPassword,iRemoteName,iMode);
    out.println("Database '" + iDatabaseName + "' has been shared in '"+ iMode+ "' mode with '"+ iMode+ "' the server "+ iRemoteName);
  }
 catch (  Exception e) {
    printError(e);
  }
}
