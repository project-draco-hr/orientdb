{
  final StringBuilder buffer=new StringBuilder("\n");
  if (iColumns.size() > 0) {
    int i=0;
    for (    Entry<String,Integer> col : iColumns.entrySet()) {
      if (i++ > 0)       buffer.append("+");
      for (int k=0; k < col.getValue(); ++k)       buffer.append("-");
    }
  }
  buffer.append("\n");
  out.message(buffer.toString());
}
