{
  final String fieldName;
  if (iCondition.getLeft() instanceof OSQLFilterItemField)   fieldName=iCondition.getLeft().toString();
 else   fieldName=iCondition.getRight().toString();
  final String fieldValue;
  if (iCondition.getLeft() instanceof OSQLFilterItemField)   fieldValue=iCondition.getRight().toString();
 else   fieldValue=iCondition.getLeft().toString();
  String className=iTargetClasses.get(0);
  final OProperty prop=iDatabase.getMetadata().getSchema().getClass(className).getProperty(fieldName);
  if (prop == null)   return null;
  final OPropertyIndex index=prop.getIndex();
  if (index == null || !(index.getUnderlying() instanceof OIndexFullText))   return null;
  return index.getUnderlying().get(fieldValue);
}
