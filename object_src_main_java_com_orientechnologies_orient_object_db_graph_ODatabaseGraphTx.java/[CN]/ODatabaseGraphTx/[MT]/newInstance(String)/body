{
  if (iClassName.equals(OGraphVertex.class.getSimpleName()))   return new OGraphVertex(this);
 else   if (iClassName.equals(OGraphEdge.class.getSimpleName()))   return new OGraphEdge(this);
  OClass cls=getMetadata().getSchema().getClass(iClassName);
  if (cls != null) {
    cls=cls.getSuperClass();
    while (cls != null) {
      if (cls.getName().equals(OGraphVertex.class.getSimpleName()))       return new OGraphVertex(this,iClassName);
 else       if (cls.getName().equals(OGraphEdge.class.getSimpleName()))       return new OGraphEdge(this,iClassName);
      cls=cls.getSuperClass();
    }
  }
  throw new OGraphException("Unrecognized class: " + iClassName);
}
