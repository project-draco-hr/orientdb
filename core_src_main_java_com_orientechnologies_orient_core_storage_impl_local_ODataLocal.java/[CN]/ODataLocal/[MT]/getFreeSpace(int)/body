{
  final long position;
  if (defragStrategy == 0)   position=holeSegment.popFirstAvailableHole(recordSize);
 else   position=holeSegment.popBestHole(recordSize);
  final long[] newFilePosition;
  if (position > -1)   newFilePosition=getRelativePosition(position);
 else   newFilePosition=allocateSpace(recordSize);
  return newFilePosition;
}
