{
  if (roles.isEmpty())   throw new OSecurityAccessException(getName(),"User '" + getName() + "' has no role defined");
  final OSecurityRole role=checkIfAllowed(iResource,iOperation);
  if (role == null)   throw new OSecurityAccessException(getName(),"User '" + getName() + "' has no the permission to execute the operation '"+ ORole.permissionToString(iOperation)+ "' against the resource: "+ iResource);
  return role;
}
