{
  checkOpeness();
  if (iClusterName == null)   throw new IllegalArgumentException("Cluster name is null");
  OCluster segment;
  lock.acquireSharedLock();
  try {
    segment=clusterMap.get(iClusterName.toLowerCase());
  }
  finally {
    lock.releaseSharedLock();
  }
  if (segment != null)   return segment.getType();
  return null;
}
