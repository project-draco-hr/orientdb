{
  checkOpeness();
  lock.acquireSharedLock();
  try {
    long tot=0;
    for (    int iClusterId : iClusterIds) {
      if (iClusterId >= clusters.length)       throw new OConfigurationException("Cluster id " + iClusterId + " was not found in database '"+ name+ "'");
      if (iClusterId > -1) {
        final OCluster c=clusters[iClusterId];
        if (c != null)         tot+=c.getEntries() - (countTombstones ? 0L : c.getTombstonesCount());
      }
    }
    return tot;
  }
  finally {
    lock.releaseSharedLock();
  }
}
