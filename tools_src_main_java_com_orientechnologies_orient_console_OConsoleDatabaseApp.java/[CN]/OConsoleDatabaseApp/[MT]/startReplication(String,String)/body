{
  try {
    if (serverAdmin == null)     throw new IllegalStateException("You must be connected to a remote server to start the replication");
    out.println("Starting replication for database '" + iDatabaseName + "' between server '"+ serverAdmin.getURL()+ "' and '"+ iRemoteName+ "'...");
    serverAdmin.startReplication(iDatabaseName,iRemoteName);
    out.println("Replication successfully started");
  }
 catch (  Exception e) {
    printError(e);
  }
}
