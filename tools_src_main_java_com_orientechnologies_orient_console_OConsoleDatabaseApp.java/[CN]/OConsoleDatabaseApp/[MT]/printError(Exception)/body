{
  if (properties.get("debug") != null && Boolean.parseBoolean(properties.get("debug").toString())) {
    message("\n\n!ERROR:");
    e.printStackTrace();
  }
 else {
    message("\n\n!ERROR: " + e.getMessage());
    if (e.getCause() != null) {
      Throwable t=e.getCause();
      while (t != null) {
        message("\n-> " + t.getMessage());
        t=t.getCause();
      }
    }
  }
}
