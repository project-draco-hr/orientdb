{
  try {
    final boolean result=storage.cleanOutRecord(rid,iVersion,iMode,null);
    if (!result && iRequired)     throw new ORecordNotFoundException("The record with id " + rid + " was not found");
    return result;
  }
 catch (  OException e) {
    throw e;
  }
catch (  Exception e) {
    throw new ODatabaseException("Error on deleting record " + rid,e);
  }
}
