{
  if (!file.exists())   return true;
  if (useOldFileAPI)   return file.delete();
  try {
    final FileSystem fileSystem=FileSystems.getDefault();
    final Path path=fileSystem.getPath(file.getAbsolutePath());
    Files.delete(path);
    return true;
  }
 catch (  FileSystemException e) {
    return false;
  }
}
