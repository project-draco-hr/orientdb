{
  if (metadata != null) {
    if (metadata.containsField(CONFIG_IGNORE_CHARS))     ignoreChars=(String)metadata.field(CONFIG_IGNORE_CHARS);
    if (metadata.containsField(CONFIG_INDEX_RADIX))     indexRadix=(Boolean)metadata.field(CONFIG_INDEX_RADIX);
    if (metadata.containsField(CONFIG_SEPARATOR_CHARS))     separatorChars=(String)metadata.field(CONFIG_SEPARATOR_CHARS);
    if (metadata.containsField(CONFIG_MIN_WORD_LEN))     minWordLength=(Integer)metadata.field(CONFIG_MIN_WORD_LEN);
    if (metadata.containsField(CONFIG_STOP_WORDS))     stopWords=new HashSet<String>((Collection<? extends String>)metadata.field(CONFIG_STOP_WORDS));
  }
}
