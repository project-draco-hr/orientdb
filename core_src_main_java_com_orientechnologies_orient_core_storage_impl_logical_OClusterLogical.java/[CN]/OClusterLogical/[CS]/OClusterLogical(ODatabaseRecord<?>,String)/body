{
  this(iName,-1);
  try {
    map=new OTreeMapPersistent<Long,OPhysicalPosition>(iDatabase,OStorage.DEFAULT_SEGMENT,OStreamSerializerLong.INSTANCE,OStreamSerializerAnyStreamable.INSTANCE);
    total=new OPhysicalPosition(0,0,(byte)0);
    map.put(new Long(-1),total);
  }
 catch (  Exception e) {
    throw new ODatabaseException("Error on creating internal map for logical cluster: " + iName,e);
  }
  map.save();
}
