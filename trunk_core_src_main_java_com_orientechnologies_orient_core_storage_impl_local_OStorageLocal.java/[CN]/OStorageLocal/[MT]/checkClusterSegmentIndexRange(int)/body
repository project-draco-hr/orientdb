{
  if (iClusterId < -1 && getLogicalClusterIndex(iClusterId) > logicalClusters.size() - 1)   throw new IllegalArgumentException("Cluster segment #" + iClusterId + " not exists");
  if (iClusterId > -1 && iClusterId > physicalClusters.length - 1)   throw new IllegalArgumentException("Cluster segment #" + iClusterId + " not exists");
}
