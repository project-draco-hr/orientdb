{
  LRUEntry lruEntry=am.remove(fileId,pageIndex);
  if (lruEntry != null) {
    if (lruEntry.usageCounter > 1)     throw new IllegalStateException("Record cannot be removed because it is used!");
    return lruEntry;
  }
  lruEntry=a1out.remove(fileId,pageIndex);
  if (lruEntry != null) {
    return lruEntry;
  }
  lruEntry=a1in.remove(fileId,pageIndex);
  if (lruEntry != null && lruEntry.usageCounter > 1)   throw new IllegalStateException("Record cannot be removed because it is used!");
  return lruEntry;
}
