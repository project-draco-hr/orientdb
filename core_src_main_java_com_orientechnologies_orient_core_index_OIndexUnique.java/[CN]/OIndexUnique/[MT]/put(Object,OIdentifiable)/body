{
  checkForRebuild();
  modificationLock.requestModificationLock();
  try {
    acquireExclusiveLock();
    try {
      checkForKeyType(iKey);
      final OIdentifiable value=map.get(iKey);
      if (value != null) {
        if (!value.equals(iSingleValue))         throw new ORecordDuplicatedException(String.format("Cannot index record %s: found duplicated key '%s' in index '%s' previously assigned to the record %s",null,OIndexException.class,iSingleValue.getIdentity(),iKey,getName(),value.getIdentity()),value.getIdentity());
 else         return this;
      }
      if (!iSingleValue.getIdentity().isPersistent())       ((ORecord<?>)iSingleValue.getRecord()).save();
      map.put(iKey,iSingleValue.getIdentity());
      return this;
    }
  finally {
      releaseExclusiveLock();
    }
  }
  finally {
    modificationLock.releaseModificationLock();
  }
}
