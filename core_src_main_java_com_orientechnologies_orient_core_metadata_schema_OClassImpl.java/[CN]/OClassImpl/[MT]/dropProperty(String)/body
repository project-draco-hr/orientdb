{
  if (getDatabase().getTransaction().isActive())   throw new IllegalStateException("Cannot drop a property inside a transaction");
  getDatabase().checkSecurity(ODatabaseSecurityResources.SCHEMA,ORole.PERMISSION_DELETE);
  final String lowerName=iPropertyName.toLowerCase();
  if (!properties.containsKey(lowerName))   throw new OSchemaException("Property '" + iPropertyName + "' not found in class "+ name+ "'");
  getDatabase().command(new OCommandSQL("drop property " + name + '.'+ iPropertyName)).execute();
  if (existsProperty(iPropertyName))   properties.remove(lowerName);
}
