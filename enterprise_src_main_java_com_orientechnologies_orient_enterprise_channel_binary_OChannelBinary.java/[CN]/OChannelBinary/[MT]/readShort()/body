{
  if (debug) {
    OLogManager.instance().debug(this,"%s - Reading short (2 bytes)...",socket.getRemoteSocketAddress());
    final short value=in.readShort();
    OLogManager.instance().debug(this,"%s - Read short: %d",socket.getRemoteSocketAddress(),value);
    return value;
  }
  return in.readShort();
}
