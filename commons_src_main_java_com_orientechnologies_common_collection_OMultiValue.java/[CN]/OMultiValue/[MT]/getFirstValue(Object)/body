{
  if (iObject == null)   return null;
  if (!isMultiValue(iObject))   return null;
  try {
    if (iObject instanceof Collection<?>)     return ((Collection<Object>)iObject).iterator().next();
    if (iObject instanceof Map<?,?>)     return ((Map<?,Object>)iObject).values().iterator().next();
    if (iObject.getClass().isArray())     return Array.get(iObject,0);
  }
 catch (  Exception e) {
    OLogManager.instance().debug(iObject,"Error on reading the first item of the multi value field '%s'",iObject);
  }
  return null;
}
