{
  List<ORecordId> values=map.get(iKey);
  if (values == null)   values=new ArrayList<ORecordId>();
 else   if (values.size() == 1) {
    if (!values.get(0).equals(iSingleValue))     throw new OIndexException("Found duplicated key '" + iKey + "' on unique index defined in property: "+ owner);
 else     return;
  }
 else   if (values.size() > 1)   throw new OIndexException("Found duplicated key '" + iKey + "' on unique index defined in property: "+ owner);
  values.add(iSingleValue);
  map.put(iKey.toString(),values);
}
