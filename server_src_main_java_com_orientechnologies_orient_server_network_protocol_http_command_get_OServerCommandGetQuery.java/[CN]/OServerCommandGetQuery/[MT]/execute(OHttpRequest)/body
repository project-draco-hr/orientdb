{
  String[] urlParts=checkSyntax(iRequest.url,3,"Syntax error: query/sql/<query-text>[/<limit>]<br/>Limit is optional and is setted to 20 by default. Set expressely to 0 to have no limits.");
  final int limit=urlParts.length > 3 ? Integer.parseInt(urlParts[3]) : 20;
  final String text=urlParts[2].trim();
  iRequest.data.commandInfo="Query";
  iRequest.data.commandDetail=text;
  if (!text.toLowerCase().startsWith("select"))   throw new IllegalArgumentException("Only SQL Select are valid using HTTP GET");
  ODatabaseDocumentTx db=null;
  final List<ORecord<?>> response;
  try {
    db=OSharedDocumentDatabase.acquireDatabase(urlParts[1]);
    response=(List<ORecord<?>>)db.command(new OSQLSynchQuery<ORecordSchemaAware<?>>(text,limit)).execute();
  }
  finally {
    if (db != null)     OSharedDocumentDatabase.releaseDatabase(db);
  }
  sendRecordsContent(iRequest,response);
}
