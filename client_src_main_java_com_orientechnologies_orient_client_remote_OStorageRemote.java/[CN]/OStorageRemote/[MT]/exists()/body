{
  checkConnection();
  do {
    boolean locked=lock.acquireExclusiveLock();
    try {
      try {
        beginRequest(OChannelBinaryProtocol.REQUEST_DB_EXIST);
      }
  finally {
        endRequest();
      }
      try {
        beginResponse();
        return network.readByte() == 1;
      }
  finally {
        endResponse();
      }
    }
 catch (    Exception e) {
      if (handleException("Error on checking if the database exists",e))       break;
    }
 finally {
      lock.releaseExclusiveLock(locked);
    }
  }
 while (true);
  return false;
}
