{
  if (configuration.binaryFormatVersion >= 11) {
    if (dirtyFlag.exits())     dirtyFlag.open();
 else {
      dirtyFlag.create();
      dirtyFlag.makeDirty();
    }
  }
 else {
    if (dirtyFlag.exits())     dirtyFlag.open();
 else {
      dirtyFlag.create();
      dirtyFlag.clearDirty();
    }
  }
}
