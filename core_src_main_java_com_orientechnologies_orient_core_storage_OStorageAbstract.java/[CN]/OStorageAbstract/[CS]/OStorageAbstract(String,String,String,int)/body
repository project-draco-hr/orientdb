{
  if (OStringSerializerHelper.contains(name,'/'))   this.name=name.substring(name.lastIndexOf('/') + 1);
 else   this.name=name;
  if (OStringSerializerHelper.contains(name,','))   throw new IllegalArgumentException("Invalid character in storage name: " + this.name);
  url=iURL;
  this.mode=mode;
  lock=new OSharedResourceAdaptiveExternal(OGlobalConfiguration.ENVIRONMENT_CONCURRENT.getValueAsBoolean(),timeout,true);
}
