{
  try {
    if (serverAdmin == null)     throw new IllegalStateException("You must be connected to a remote server to stop the replication");
    serverAdmin.stopReplication(iDatabaseName,iRemoteName);
    out.println("Replication started for database '" + iDatabaseName + "' against the server '"+ iRemoteName+ "'");
  }
 catch (  Exception e) {
    printError(e);
  }
}
