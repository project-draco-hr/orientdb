{
  final Socket socket;
  if (connection.protocol == null || connection.protocol.getChannel() == null)   socket=null;
 else   socket=connection.protocol.getChannel().socket;
  if (socket == null || socket.isClosed() || socket.isInputShutdown()) {
    OLogManager.instance().debug(this,"[OHttpResponse] found and removed pending closed channel %d (%s)",connection,socket);
    throw new IOException("Connection is closed");
  }
}
