{
  final String nodeId=getNodeId(clusterMember);
  if (getLocalNodeId().equals(nodeId))   return;
  OLogManager.instance().warn(this,"DISTRIBUTED -> connected cluster node %s, start aligning...",nodeId);
  clusterMembers.put(nodeId,clusterMember);
  int aligned=0;
  for (  OStorageReplicator r : replicators.values())   aligned+=r.align(nodeId);
  OLogManager.instance().warn(this,"DISTRIBUTED -> alignment completed against cluster node %s. Total records: %d",nodeId,aligned);
}
