{
  if (unaligned)   return unsafe.getInt(pointer);
  if (alignedOrder.equals(ByteOrder.BIG_ENDIAN)) {
    return (0xFF & unsafe.getByte(pointer++)) << 24 | (0xFF & unsafe.getByte(pointer++)) << 16 | (0xFF & unsafe.getByte(pointer++)) << 8 | (0xFF & unsafe.getByte(pointer));
  }
  return (0xFF & unsafe.getByte(pointer++)) | (0xFF & unsafe.getByte(pointer)) << 8 | (0xFF & unsafe.getByte(pointer++)) << 16 | (0xFF & unsafe.getByte(pointer)) << 24;
}
