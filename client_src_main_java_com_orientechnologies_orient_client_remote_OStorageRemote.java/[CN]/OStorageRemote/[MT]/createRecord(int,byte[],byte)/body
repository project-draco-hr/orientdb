{
  checkConnection();
  do {
    boolean locked=acquireExclusiveLock();
    try {
      network.writeByte(OChannelBinaryProtocol.RECORD_CREATE);
      network.writeShort((short)iClusterId);
      network.writeByte(iRecordType);
      network.writeBytes((byte[])iContent);
      network.flush();
      readStatus();
      return network.readLong();
    }
 catch (    Exception e) {
      if (handleException("Error on create record in cluster: " + iClusterId,e))       break;
    }
 finally {
      releaseExclusiveLock(locked);
    }
  }
 while (true);
  return -1;
}
