{
  if (System.getProperty(SYSPROPERTY_LOG_LEVEL) != null)   setLevel(System.getProperty(SYSPROPERTY_LOG_LEVEL));
  Logger log=Logger.getLogger("");
  if (log.getHandlers().length == 0) {
    Handler h=new ConsoleHandler();
    h.setFormatter(new OLogFormatter());
    log.addHandler(h);
  }
 else {
    for (    Handler h : log.getHandlers()) {
      if (h instanceof ConsoleHandler && !h.getFormatter().getClass().equals(OLogFormatter.class))       h.setFormatter(new OLogFormatter());
    }
  }
}
