{
  acquireExclusiveLock();
  try {
    final OClientConnection connection=connections.get(iChannelId);
    if (connection != null) {
      final ONetworkProtocol protocol=connection.protocol;
      disconnect(iChannelId);
      protocol.sendShutdown();
    }
  }
  finally {
    releaseExclusiveLock();
  }
}
