{
  if (iValue instanceof String)   text.append(QUERY_STRING);
  final Object value;
  if (iValue instanceof Date)   value=((Date)iValue).getTime();
 else   if (iValue != null)   value=iValue.toString().replace("'","\\'");
 else   value=iValue;
  text.append(value);
  if (iValue instanceof String)   text.append(QUERY_STRING);
}
