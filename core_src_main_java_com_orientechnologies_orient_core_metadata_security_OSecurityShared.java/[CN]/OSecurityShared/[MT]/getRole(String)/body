{
  if (cachedRoles != null) {
    final ORole role=cachedRoles.get(iRoleName);
    if (role != null)     return role;
  }
  acquireExclusiveLock();
  try {
    final List<ODocument> result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from ORole where name = '" + iRoleName + "' limit 1")).execute();
    if (result != null && !result.isEmpty())     return cacheRole(new ORole(result.get(0)));
    return null;
  }
 catch (  Exception ex) {
    OLogManager.instance().error(this,"Failed to get role : " + iRoleName + " "+ ex.getMessage());
    return null;
  }
 finally {
    releaseExclusiveLock();
  }
}
