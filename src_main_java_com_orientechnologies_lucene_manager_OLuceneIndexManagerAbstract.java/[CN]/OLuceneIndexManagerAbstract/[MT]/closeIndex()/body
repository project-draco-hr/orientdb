{
  OLogManager.instance().debug(this,"Closing Lucene index '" + this.indexName + "'...");
  if (nrt != null) {
    nrt.interrupt();
    nrt.close();
  }
  if (searcherManager != null)   searcherManager.close();
  if (mgrWriter != null) {
    mgrWriter.getIndexWriter().commit();
    mgrWriter.getIndexWriter().close();
  }
}
