{
  Object value=null;
  if (iContent instanceof String)   value=OVariableParser.resolveVariables((String)iContent,OSystemVariableResolver.VAR_BEGIN,OSystemVariableResolver.VAR_END,new OVariableParserListener(){
    @Override public Object resolve(    final String iVariable){
      return iContext.getVariable(iVariable);
    }
  }
);
 else   value=iContent;
  if (value instanceof String)   value=OVariableParser.resolveVariables((String)value,"={","}",new OVariableParserListener(){
    @Override public Object resolve(    final String iVariable){
      return new OSQLPredicate(iVariable).evaluate(iContext);
    }
  }
);
  return value;
}
