{
  account=connection.database.getMetadata().getSecurity().getUser(iUserName);
  if (account == null)   throw new OSecurityAccessException(connection.database.getName(),"User or password not valid for database: '" + connection.database.getName() + "'");
  boolean allow=account.checkPassword(iUserPassword);
  if (!allow)   account=null;
  return allow;
}
