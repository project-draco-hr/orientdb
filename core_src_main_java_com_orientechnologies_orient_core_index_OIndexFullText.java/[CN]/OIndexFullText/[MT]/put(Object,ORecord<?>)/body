{
  if (iKey == null)   return this;
  Set<OIdentifiable> refs;
  final StringBuilder buffer=new StringBuilder();
  char c;
  boolean ignore;
  final List<String> words=OStringSerializerHelper.split(iKey.toString(),' ');
  for (  String word : words) {
    buffer.setLength(0);
    for (int i=0; i < word.length(); ++i) {
      c=word.charAt(i);
      ignore=false;
      for (int k=0; k < ignoreChars.length(); ++k)       if (c == ignoreChars.charAt(k)) {
        ignore=true;
        break;
      }
      if (!ignore)       buffer.append(c);
    }
    word=buffer.toString();
    if (stopWords.contains(word))     continue;
    acquireExclusiveLock();
    try {
      refs=map.get(word);
      if (refs == null)       refs=new ORecordLazySet(configuration.getDatabase());
      refs.add(iSingleValue);
      map.put(word,refs);
    }
  finally {
      releaseExclusiveLock();
    }
  }
  return this;
}
