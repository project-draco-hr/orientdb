{
  if (iRequest.getId().getMessageId() < 0)   return;
  final String senderNodeName=manager.getNodeNameById(iRequest.getId().getNodeId());
  final ODistributedResponse response=new ODistributedResponse(iRequest.getId(),manager.getLocalNodeName(),senderNodeName,responsePayload);
  try {
    final ORemoteServerController remoteSenderServer=manager.getRemoteServer(senderNodeName);
    ODistributedServerLog.debug(this,manager.getLocalNodeName(),senderNodeName,ODistributedServerLog.DIRECTION.OUT,"Sending response %s back",response);
    remoteSenderServer.sendResponse(response,senderNodeName);
  }
 catch (  Exception e) {
    ODistributedServerLog.debug(this,manager.getLocalNodeName(),senderNodeName,ODistributedServerLog.DIRECTION.OUT,"Error on sending response %s back",response);
  }
}
