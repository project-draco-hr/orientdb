{
  checkConnection();
  do {
    try {
      final OChannelBinaryClient network=beginRequest(OChannelBinaryProtocol.REQUEST_DB_SIZE);
      endRequest(network);
      try {
        beginResponse(network);
        return network.readLong();
      }
  finally {
        endResponse(network);
      }
    }
 catch (    OException e) {
      throw e;
    }
catch (    Exception e) {
      handleException("Error on read database size",e);
    }
  }
 while (true);
}
