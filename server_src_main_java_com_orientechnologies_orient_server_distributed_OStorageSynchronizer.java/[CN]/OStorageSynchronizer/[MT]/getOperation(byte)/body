{
  if (iRecordOperation == ORecordOperation.CREATED)   return OPERATION.RECORD_CREATE;
 else   if (iRecordOperation == ORecordOperation.UPDATED)   return OPERATION.RECORD_UPDATE;
 else   if (iRecordOperation == ORecordOperation.DELETED)   return OPERATION.RECORD_DELETE;
  throw new IllegalArgumentException("Illegal operation read from log: " + iRecordOperation);
}
