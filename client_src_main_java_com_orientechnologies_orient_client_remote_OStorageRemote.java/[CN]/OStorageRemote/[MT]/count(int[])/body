{
  checkConnection();
  do {
    boolean locked=acquireExclusiveLock();
    try {
      writeCommand(OChannelBinaryProtocol.REQUEST_DATACLUSTER_COUNT);
      network.writeShort((short)iClusterIds.length);
      for (int i=0; i < iClusterIds.length; ++i)       network.writeShort((short)iClusterIds[i]);
      network.readStatus();
      return network.readLong();
    }
 catch (    Exception e) {
      if (handleException("Error on read record count in clusters: " + iClusterIds,e))       break;
    }
 finally {
      releaseExclusiveLock(locked);
    }
  }
 while (true);
  return -1;
}
