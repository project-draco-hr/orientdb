{
  if (OLogManager.instance().isDebugEnabled())   OLogManager.instance().debug(this,"[checkSecurity] Check permissions for resource '%s', operation '%s'",iResource,iOperation);
  if (user != null) {
    try {
      final ORole role=user.allow(iResource,iOperation);
    }
 catch (    OSecurityAccessException e) {
      throw e;
    }
  }
  return (DB)this;
}
