{
  if (iValue != null) {
    OSerializableStream stream=(OSerializableStream)iValue;
    if (!(iValue instanceof OSerializableStream))     throw new OSerializationException("Can't serialize the object since it's not implements the OSerializableStream interface");
    iOutput.append(iValue.getClass().getName());
    iOutput.append(OStreamSerializerHelper.SEPARATOR);
    iOutput.append(OBinaryProtocol.bytes2string(stream.toStream()));
  }
  return iOutput;
}
