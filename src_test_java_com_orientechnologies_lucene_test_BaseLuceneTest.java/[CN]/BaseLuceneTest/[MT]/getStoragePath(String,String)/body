{
  final String path;
  if (storageMode.equals(OEngineLocalPaginated.NAME)) {
    path=storageMode + ":${" + Orient.ORIENTDB_HOME+ "}/databases/"+ databaseName;
  }
 else   if (storageMode.equals(OEngineMemory.NAME)) {
    path=storageMode + ":" + databaseName;
  }
 else {
    return null;
  }
  return path;
}
