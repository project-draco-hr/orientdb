{
  try {
    return Long.parseLong(iSize);
  }
 catch (  NumberFormatException e) {
    iSize=iSize.toUpperCase();
    int pos=iSize.indexOf("KB");
    if (pos > -1)     return Long.parseLong(iSize.substring(0,pos)) * KILOBYTE;
    pos=iSize.indexOf("MB");
    if (pos > -1)     return Long.parseLong(iSize.substring(0,pos)) * MEGABYTE;
    pos=iSize.indexOf("GB");
    if (pos > -1)     return Long.parseLong(iSize.substring(0,pos)) * GIGABYTE;
    pos=iSize.indexOf("TB");
    if (pos > -1)     return Long.parseLong(iSize.substring(0,pos)) * TERABYTE;
    pos=iSize.indexOf("B");
    if (pos > -1)     return Long.parseLong(iSize.substring(0,pos));
    pos=iSize.indexOf("%");
    if (pos > -1)     return -1 * Long.parseLong(iSize.substring(0,pos));
    throw e;
  }
}
