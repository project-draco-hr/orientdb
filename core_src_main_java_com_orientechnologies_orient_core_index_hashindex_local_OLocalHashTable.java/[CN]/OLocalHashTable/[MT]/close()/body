{
  acquireExclusiveLock();
  try {
    flush();
    metadataStore.close();
    treeStateStore.close();
    for (int i=0; i < filesMetadata.length; i++)     if (filesMetadata[i] != null)     buffer.closeFile(fileLevelIds[i]);
  }
 catch (  IOException e) {
    throw new OIndexException("Error during hash table close",e);
  }
 finally {
    releaseExclusiveLock();
  }
}
