{
  checkOpeness();
  final OCluster cluster=getClusterById(iRid.clusterId);
  final ODataLocal dataSegment=getDataSegmentById(iDataSegmentId);
  if (txManager.isCommitting())   iRid.clusterPosition=txManager.createRecord(txManager.getCurrentTransaction().getId(),dataSegment,cluster,iRid,iContent,iRecordType);
 else {
    final OPhysicalPosition ppos=createRecord(dataSegment,cluster,iContent,iRecordType,iRid);
    if (OGlobalConfiguration.NON_TX_RECORD_UPDATE_SYNCH.getValueAsBoolean())     synchRecordUpdate(cluster,ppos);
  }
  return iRid.clusterPosition;
}
