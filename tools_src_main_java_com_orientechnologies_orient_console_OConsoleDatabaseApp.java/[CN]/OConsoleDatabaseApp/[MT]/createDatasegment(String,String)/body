{
  checkForDatabase();
  if (iLocation != null)   message("\nCreating data-segment [" + iName + "] in database "+ currentDatabaseName+ " in path: "+ iLocation+ "...");
 else   message("\nCreating data-segment [" + iName + "] in database directory...");
  currentDatabase.addDataSegment(iName,iLocation);
  updateDatabaseInfo();
}
