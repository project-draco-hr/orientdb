{
  if (value == null) {
    return "null";
  }
 else   if (value instanceof SimpleNode) {
    return value.toString();
  }
 else   if (value instanceof String) {
    if (Boolean.TRUE.equals(singleQuotes)) {
      return "'" + value + "'";
    }
    return "\"" + value + "\"";
  }
 else {
    return "" + value;
  }
}
