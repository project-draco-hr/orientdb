{
  boolean optional=false;
  for (  String f : fieldNames) {
    if (isFieldOptional(f)) {
      if (!optional)       optional=true;
    }
 else     if (optional)     throw new OConfigurationException("The field '" + f + "' cannot be defined non-optional after an optional. Optional fields must go after all");
 else     mandatoryFields++;
  }
}
