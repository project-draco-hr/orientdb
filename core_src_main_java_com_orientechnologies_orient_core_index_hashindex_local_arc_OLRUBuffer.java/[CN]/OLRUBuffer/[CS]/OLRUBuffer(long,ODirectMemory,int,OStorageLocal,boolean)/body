{
  this.directMemory=directMemory;
  this.pageSize=pageSize;
  this.storageLocal=storageLocal;
  this.syncOnPageFlush=syncOnPageFlush;
  this.files=new HashMap<String,OMultiFileSegment>();
  this.filesPages=new HashMap<String,Set<Long>>();
  this.evictedItems=new TreeMap<FileLockKey,Long>();
  this.lockManager=new OLockManager<FileLockKey,Runnable>(OGlobalConfiguration.ENVIRONMENT_CONCURRENT.getValueAsBoolean(),1000);
  long tmpMaxSize=maxMemory / pageSize;
  if (tmpMaxSize >= Integer.MAX_VALUE)   maxSize=Integer.MAX_VALUE;
 else   maxSize=(int)tmpMaxSize;
  lruList=new LRUList();
  syncObject=new Object();
}
