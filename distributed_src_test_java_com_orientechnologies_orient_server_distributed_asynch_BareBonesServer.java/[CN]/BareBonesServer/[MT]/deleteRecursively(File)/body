{
  OLogManager.instance().info(this,"deleting recursively: " + iRootFile.getAbsolutePath());
  if (iRootFile.exists()) {
    if (iRootFile.isDirectory()) {
      for (      File f : iRootFile.listFiles()) {
        if (f.isFile())         f.delete();
 else         deleteRecursively(f);
      }
    }
    iRootFile.delete();
  }
}
