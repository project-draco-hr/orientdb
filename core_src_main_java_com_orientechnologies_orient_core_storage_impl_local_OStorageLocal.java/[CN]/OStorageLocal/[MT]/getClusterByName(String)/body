{
  lock.acquireSharedLock();
  try {
    final OCluster cluster=clusterMap.get(iClusterName.toLowerCase());
    if (cluster == null)     throw new IllegalArgumentException("Cluster " + iClusterName + " does not exist in storage '"+ name+ "'");
    return cluster;
  }
  finally {
    lock.releaseSharedLock();
  }
}
