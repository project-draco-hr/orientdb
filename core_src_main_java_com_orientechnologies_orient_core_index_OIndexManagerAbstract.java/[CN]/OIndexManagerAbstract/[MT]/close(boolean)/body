{
  acquireExclusiveLock();
  try {
    if (!onDelete) {
      flush();
      for (      final OIndex<?> idx : indexes.values()) {
        OIndexInternal<?> indexInternal=idx.getInternal();
        if (indexInternal != null) {
          indexInternal.close();
        }
      }
    }
 else {
      for (      final OIndex<?> idx : indexes.values()) {
        OIndexInternal<?> indexInternal=idx.getInternal();
        if (indexInternal != null) {
          indexInternal.delete();
        }
      }
    }
    clearMetadata();
  }
  finally {
    releaseExclusiveLock();
  }
}
