{
  if (fields.length == 1)   return iRecord.field(fields[0]);
  StringBuilder buffer=new StringBuilder();
  for (  String f : fields) {
    if (buffer.length() > 0)     buffer.append(FIELD_SEPARATOR);
    if (f == null)     buffer.append('-');
 else     buffer.append(iRecord.field(f));
  }
  return buffer.toString();
}
