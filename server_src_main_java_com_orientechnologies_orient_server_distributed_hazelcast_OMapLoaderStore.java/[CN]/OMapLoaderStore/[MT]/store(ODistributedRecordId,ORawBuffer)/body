{
  OLogManager.instance().debug(this,"Saving record to database: %s",iRecordId);
  try {
    OStorage storage=getLocalStorage(iRecordId.dbName);
    if (iRecordId.rid.isValid())     storage.updateRecord(0,iRecordId.rid,iValue.buffer,iValue.version,iValue.recordType);
 else     storage.createRecord(0,iValue.buffer,iValue.recordType);
  }
 catch (  Exception e) {
    throw new ODistributedException("Error on saving record: " + iRecordId,e);
  }
}
