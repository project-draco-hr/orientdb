{
  buffer.setLength(0);
  boolean go=true;
  while (go && in.ready()) {
    c=nextChar();
    if (c == NEW_LINE) {
      ++lineNumber;
      columnNumber=0;
    }
 else     ++columnNumber;
    go=false;
    for (    char j : iJumpChars) {
      if (j == c) {
        go=true;
        break;
      }
    }
  }
  buffer.append(c);
  return c;
}
