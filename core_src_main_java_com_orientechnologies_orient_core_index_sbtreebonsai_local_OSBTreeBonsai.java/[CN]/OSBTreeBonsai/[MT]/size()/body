{
  acquireSharedLock();
  try {
    OCacheEntry rootCacheEntry=diskCache.load(fileId,rootIndex,false);
    OCachePointer rootPointer=rootCacheEntry.getCachePointer();
    try {
      OSBTreeBonsaiBucket rootBucket=new OSBTreeBonsaiBucket<K,V>(rootPointer.getDataPointer(),keySerializer,valueSerializer,ODurablePage.TrackMode.NONE);
      return rootBucket.getTreeSize();
    }
  finally {
      diskCache.release(rootCacheEntry);
    }
  }
 catch (  IOException e) {
    throw new OSBTreeException("Error during retrieving of size of index " + name);
  }
 finally {
    releaseSharedLock();
  }
}
