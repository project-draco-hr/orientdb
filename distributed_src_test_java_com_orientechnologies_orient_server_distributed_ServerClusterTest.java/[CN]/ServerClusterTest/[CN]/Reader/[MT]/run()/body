{
  try {
    while (!Thread.interrupted()) {
      try {
        printStats();
        Thread.sleep(DELAY_READER_QUERY);
      }
 catch (      InterruptedException e) {
        System.out.println("\nReader received interrupt (db=" + databaseUrl);
        Thread.currentThread().interrupt();
        break;
      }
catch (      Exception e) {
        e.printStackTrace();
      }
    }
  }
  finally {
    printStats();
  }
}
