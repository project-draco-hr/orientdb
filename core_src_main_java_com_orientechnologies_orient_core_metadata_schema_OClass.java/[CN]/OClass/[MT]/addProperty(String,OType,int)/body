{
  iName=iName.toLowerCase();
  if (properties.containsKey(iName))   throw new OSchemaException("Class " + name + " already has the property '"+ iName+ "'");
  OProperty prop=new OProperty(this,iName,iType,iOffset);
  properties.put(iName,prop);
  fixedSize+=iType.size;
  owner.setDirty();
  return prop;
}
