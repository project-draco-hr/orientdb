  if (remote) {
    if (serverDatabase.exists()) {
      if (!serverDatabase.isClosed()) {
        serverDatabase.drop();
      }
 else {
        serverDatabase=Orient.instance().getDatabaseFactory().createDatabase("graph",getStoragePath(getDatabaseName(),"plocal"));
