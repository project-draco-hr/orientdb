{
  super.configure(iProcessor,iConfiguration,iContext);
  joinFieldName=iConfiguration.field("joinFieldName");
  if (iConfiguration.containsField("lookup"))   lookup=iConfiguration.field("lookup");
  if (iConfiguration.containsField("unresolvedLinkAction"))   unresolvedLinkAction=ACTION.valueOf(iConfiguration.field("unresolvedLinkAction").toString().toUpperCase());
  db=processor.getDocumentDatabase();
  if (db == null)   throw new OTransformException("[Merge transformer] database is not configured");
}
