{
  try {
    for (    OCluster cluster : clusters)     if (cluster != null)     cluster.setSoftlyClosed(false);
    for (    ODataLocal data : dataSegments)     if (data != null)     data.setSoftlyClosed(false);
    if (configuration != null)     configuration.setSoftlyClosed(false);
  }
 catch (  IOException e) {
    throw new OStorageException("Error on release storage '" + name + "'",e);
  }
  modificationLock.allowModifications();
}
