{
  final boolean locked=lock.acquireExclusiveLock();
  try {
    if (!checkForClose(iForce))     return;
    for (    OClusterMemory c : clusters)     c.close();
    clusters.clear();
    data.close();
    level2cache.shutdown();
    sharedResources.clear();
    open=false;
  }
  finally {
    lock.releaseExclusiveLock(locked);
  }
}
