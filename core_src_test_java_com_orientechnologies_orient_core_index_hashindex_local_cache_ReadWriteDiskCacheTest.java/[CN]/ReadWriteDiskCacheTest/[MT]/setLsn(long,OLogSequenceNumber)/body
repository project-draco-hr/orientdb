{
  ODirectMemory directMemory=ODirectMemoryFactory.INSTANCE.directMemory();
  OLongSerializer.INSTANCE.serializeInDirectMemory(lsn.getSegment(),directMemory,dataPointer + OIntegerSerializer.INT_SIZE + OLongSerializer.LONG_SIZE);
  OLongSerializer.INSTANCE.serializeInDirectMemory(lsn.getPosition(),directMemory,dataPointer + OIntegerSerializer.INT_SIZE + 2 * OLongSerializer.LONG_SIZE);
}
