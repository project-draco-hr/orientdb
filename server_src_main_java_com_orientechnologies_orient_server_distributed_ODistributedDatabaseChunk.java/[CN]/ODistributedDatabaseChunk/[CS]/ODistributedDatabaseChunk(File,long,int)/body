{
  filePath=iFile.getAbsolutePath();
  offset=iOffset;
  final long fileSize=iFile.length();
  if (offset > fileSize)   throw new IllegalArgumentException("Offset " + iOffset + " cannot be bigger then the file itself: "+ OFileUtils.getSizeAsString(fileSize));
  final ByteArrayOutputStream out=new ByteArrayOutputStream(iMaxSize);
  final FileInputStream in=new FileInputStream(iFile);
  final int toRead=(int)Math.min(iMaxSize,fileSize - offset);
  buffer=new byte[toRead];
  try {
    in.skip(offset);
    in.read(buffer);
    last=offset + toRead >= fileSize;
  }
  finally {
    try {
      in.close();
    }
 catch (    IOException e) {
    }
    try {
      out.close();
    }
 catch (    IOException e) {
    }
  }
}
