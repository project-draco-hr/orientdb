{
  storage=iStorage;
  clusterName=iClusterName;
  if (storage != null) {
    if (clusterName != null)     clusterId=storage.getClusterIdByName(iClusterName);
 else     clusterId=storage.getClusterIdByName(OMetadata.CLUSTER_INDEX_NAME);
  }
 else {
    clusterId=-1;
  }
  record=iRecord;
  record.setIdentity(new ORecordId());
  updateConfig();
}
