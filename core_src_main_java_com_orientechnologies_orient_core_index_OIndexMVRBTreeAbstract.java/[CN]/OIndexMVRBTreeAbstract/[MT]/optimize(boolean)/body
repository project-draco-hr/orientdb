{
  if (map == null)   return;
  acquireExclusiveLock();
  try {
    OLogManager.instance().debug(this,"Forcing " + (iHardMode ? "hard" : "soft") + " optimization of Index %s (%d items). Found %d entries in memory...",name,map.size(),map.getInMemoryEntries());
    final int saved=map.optimize(true);
    OLogManager.instance().debug(this,"Completed! Saved %d and now %d entries reside in memory",saved,map.getInMemoryEntries());
  }
  finally {
    releaseExclusiveLock();
  }
}
