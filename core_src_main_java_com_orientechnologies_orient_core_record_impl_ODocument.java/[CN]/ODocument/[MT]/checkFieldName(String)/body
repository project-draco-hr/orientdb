{
  if (iPropertyName == null)   throw new IllegalArgumentException("Field name is null");
  iPropertyName=iPropertyName.trim();
  if (iPropertyName.length() == 0)   throw new IllegalArgumentException("Field name is empty");
  for (int i=0; i < iPropertyName.length(); ++i) {
    final char c=iPropertyName.charAt(i);
    if (c == ':' || c == ',')     throw new IllegalArgumentException("Invalid property name");
  }
  return iPropertyName;
}
