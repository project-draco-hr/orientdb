{
  ODistributedServerLog.warn(this,nodeName,null,DIRECTION.NONE,"Sending request of stopping node '%s'...",iNode);
  final ODistributedRequest request=new ODistributedRequest(taskFactory,nodeId,getNextMessageIdCounter(),null,new OStopNodeTask(),EXECUTION_MODE.NO_RESPONSE);
  getRemoteServer(iNode).sendRequest(request,iNode);
}
