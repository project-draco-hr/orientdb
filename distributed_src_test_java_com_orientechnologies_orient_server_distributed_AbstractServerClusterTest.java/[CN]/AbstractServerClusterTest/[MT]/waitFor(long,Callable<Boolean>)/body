{
  final long startTime=System.currentTimeMillis();
  while (true) {
    if (condition.call()) {
      break;
    }
    if (timeout > 0 && System.currentTimeMillis() - startTime > timeout)     throw new OTimeoutException("Timeout waiting for test condition");
    try {
      Thread.sleep(200);
    }
 catch (    InterruptedException e) {
    }
  }
}
