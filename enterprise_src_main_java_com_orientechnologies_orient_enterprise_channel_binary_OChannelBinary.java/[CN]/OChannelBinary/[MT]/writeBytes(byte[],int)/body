{
  if (debug)   OLogManager.instance().debug(this,"%s - Writing bytes (4+%d=%d bytes): %s",socket.getRemoteSocketAddress(),iLength,iLength + 4,Arrays.toString(iContent));
  if (iContent == null) {
    out.writeInt(-1);
    updateMetricTransmittedBytes(OBinaryProtocol.SIZE_INT);
  }
 else {
    out.writeInt(iLength);
    out.write(iContent,0,iLength);
    updateMetricTransmittedBytes(OBinaryProtocol.SIZE_INT + iLength);
  }
  return this;
}
