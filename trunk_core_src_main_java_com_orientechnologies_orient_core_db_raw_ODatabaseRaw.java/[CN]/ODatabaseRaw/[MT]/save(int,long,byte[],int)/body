{
  try {
    if (iPosition == ORID.CLUSTER_POS_INVALID)     return storage.createRecord(iClusterId,iContent);
    int newVersion=storage.updateRecord(id,iClusterId,iPosition,iContent,iVersion);
    if (newVersion > -1)     return newVersion * -1 - 2;
  }
 catch (  Throwable t) {
    OLogManager.instance().error(this,"Error on saving record in cluster id: " + iClusterId + ", position: "+ iPosition,t,ODatabaseException.class);
  }
  return ORID.CLUSTER_POS_INVALID;
}
