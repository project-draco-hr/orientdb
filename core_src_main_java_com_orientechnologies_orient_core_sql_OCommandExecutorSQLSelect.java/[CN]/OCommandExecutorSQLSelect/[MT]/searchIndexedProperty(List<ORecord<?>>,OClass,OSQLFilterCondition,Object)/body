{
  if (iItem == null || !(iItem instanceof OSQLFilterItemField))   return null;
  OSQLFilterItemField item=(OSQLFilterItemField)iItem;
  final OProperty prop=iSchemaClass.getProperty(item.getName());
  if (prop != null && prop.isIndexed()) {
    if (((prop.getIndex() instanceof OPropertyIndexUnique || prop.getIndex() instanceof OPropertyIndexNotUnique) && iCondition.getOperator() instanceof OQueryOperatorEquals) || prop.getIndex() instanceof OPropertyIndexFullText && iCondition.getOperator() instanceof OQueryOperatorContainsText) {
      final Object value=iCondition.getLeft() == iItem ? iCondition.getRight() : iCondition.getLeft();
      if (value != null) {
        final List<?> resultSet=prop.getIndex().get(value.toString());
        if (resultSet != null && resultSet.size() > 0)         for (        Object o : resultSet) {
          if (o instanceof ORID)           iResultSet.add(database.load((ORID)o));
 else           iResultSet.add((ORecord<?>)o);
        }
      }
    }
  }
  return iResultSet;
}
