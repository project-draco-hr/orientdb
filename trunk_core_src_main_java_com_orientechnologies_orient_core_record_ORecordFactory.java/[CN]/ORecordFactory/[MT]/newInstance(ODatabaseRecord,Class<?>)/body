{
  if (iClass == null)   return null;
  try {
    if (iClass.equals(ORecordVObject.class))     return (T)new ORecordVObject((ODatabaseVObject)iDatabase);
 else     if (iClass.equals(ORecordFlat.class))     return (T)new ORecordFlat(iDatabase);
 else     if (iClass.equals(ORecordBytes.class))     return (T)new ORecordBytes(iDatabase);
 else     if (iClass.equals(ORecordCSV.class))     return (T)new ORecordCSV(iDatabase);
    return (T)iClass.newInstance();
  }
 catch (  Exception e) {
    throw new OConfigurationException("Error on the creation of the record of class " + iClass,e);
  }
}
