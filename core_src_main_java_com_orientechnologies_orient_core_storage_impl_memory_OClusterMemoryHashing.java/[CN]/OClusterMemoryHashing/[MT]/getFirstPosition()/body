{
  acquireSharedLock();
  try {
    if (content.isEmpty())     return OClusterPosition.INVALID_POSITION;
    final OClusterPosition clusterPosition=content.firstKey();
    if (clusterPosition == null)     return OClusterPosition.INVALID_POSITION;
    return clusterPosition;
  }
  finally {
    releaseSharedLock();
  }
}
