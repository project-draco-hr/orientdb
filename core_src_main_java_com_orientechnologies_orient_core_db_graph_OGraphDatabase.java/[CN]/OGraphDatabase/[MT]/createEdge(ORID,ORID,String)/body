{
  final ODocument sourceVertex=load(iSourceVertexRid);
  if (sourceVertex == null)   throw new IllegalArgumentException("Source vertex '" + iSourceVertexRid + "' doesn't exist");
  final ODocument destVertex=load(iDestVertexRid);
  if (destVertex == null)   throw new IllegalArgumentException("Source vertex '" + iDestVertexRid + "' doesn't exist");
  return createEdge(sourceVertex,destVertex,iClassName);
}
