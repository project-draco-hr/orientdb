{
  long dateFromLastGC=new Date().getTime() - lastGC;
  if (dateFromLastGC > minimalTimeAmount) {
    System.gc();
    lastGC=new Date().getTime();
    if (iDelayTime > 0)     try {
      Thread.sleep(iDelayTime);
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
    }
  }
}
