{
  getDatabase().checkSecurity(ODatabaseSecurityResources.SCHEMA,ORole.PERMISSION_UPDATE);
  if (iAbstract) {
    if (defaultClusterId != NOT_EXISTENT_CLUSTER_ID) {
      if (count() > 0)       throw new IllegalStateException("Cannot set the class as abstract because contains records.");
      if (name.toLowerCase().equals(getDatabase().getClusterNameById(defaultClusterId))) {
        if (ODatabaseRecordThreadLocal.INSTANCE.get().getClusterRecordSizeById(defaultClusterId) == 0)         ODatabaseRecordThreadLocal.INSTANCE.get().dropCluster(defaultClusterId,true);
      }
      owner.removeClusterForClass(defaultClusterId,this);
      defaultClusterId=NOT_EXISTENT_CLUSTER_ID;
    }
  }
 else {
    this.defaultClusterId=getDatabase().getDefaultClusterId();
    this.clusterIds[0]=this.defaultClusterId;
  }
  this.abstractClass=iAbstract;
}
