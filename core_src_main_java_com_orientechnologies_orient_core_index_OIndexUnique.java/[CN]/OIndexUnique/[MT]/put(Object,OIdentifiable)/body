{
  checkForRebuild();
  modificationLock.requestModificationLock();
  try {
    acquireExclusiveLock();
    try {
      checkForKeyType(key);
      final OIdentifiable value=indexEngine.get(key);
      if (value != null) {
        if (!value.equals(iSingleValue))         throw new ORecordDuplicatedException("Found duplicated key '" + key + "' on unique index '"+ name+ "' for record "+ iSingleValue.getIdentity()+ ". The record already present in the index is "+ value.getIdentity(),value.getIdentity());
 else         return this;
      }
      if (!iSingleValue.getIdentity().isPersistent())       ((ORecord<?>)iSingleValue.getRecord()).save();
      indexEngine.put(key,iSingleValue.getIdentity());
      return this;
    }
  finally {
      releaseExclusiveLock();
    }
  }
  finally {
    modificationLock.releaseModificationLock();
  }
}
