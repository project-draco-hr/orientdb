{
  Orient.instance().getProfiler().updateCounter("server.connections.actives",-1);
  connection.close();
  acquireExclusiveLock();
  try {
    for (    Entry<Integer,OClientConnection> entry : new HashMap<Integer,OClientConnection>(connections).entrySet()) {
      if (entry.getValue().equals(connection))       connections.remove(entry.getKey());
    }
  }
  finally {
    releaseExclusiveLock();
  }
}
