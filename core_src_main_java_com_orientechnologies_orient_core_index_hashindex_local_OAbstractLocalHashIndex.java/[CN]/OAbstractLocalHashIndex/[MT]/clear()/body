{
  acquireExclusiveLock();
  try {
    bucketFile.truncate();
    bucketTombstonePointer=-1;
    metadataStore.truncate();
    treeStateStore.truncate();
    initHashTreeState();
    return this;
  }
 catch (  IOException e) {
    throw new OIndexException("Error during index clear",e);
  }
 finally {
    releaseExclusiveLock();
  }
}
