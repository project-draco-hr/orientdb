{
  final Map<String,Object> result=new HashMap<String,Object>();
  ODistributedServerLog.info(this,iTask.getNodeSource(),iNodeIds.toString(),DIRECTION.OUT,"distribute operation %s",iTask.getName());
  for (  String nodeId : iNodeIds) {
    final Member m=remoteClusterNodes.get(nodeId);
    if (m == null)     ODistributedServerLog.warn(this,getLocalNodeId(),nodeId,DIRECTION.OUT,"cannot execute operation on remote member because is disconnected");
 else     result.put(nodeId,sendOperation2Node(nodeId,iTask));
  }
  return result;
}
