{
  final boolean locked=lock.acquireSharedLock();
  try {
    final List<OPhysicalPosition> holes=getHoles();
    long size=0;
    for (    OPhysicalPosition h : holes) {
      if (h.dataPosition > -1 && h.recordSize > 0)       size+=h.recordSize;
    }
    return size;
  }
  finally {
    lock.releaseSharedLock(locked);
  }
}
