{
  ownerPool=(OObjectDatabasePool)iOwner;
  if (isClosed())   open((String)iAdditionalArgs[0],(String)iAdditionalArgs[1]);
  init();
  ODatabaseRecordThreadLocal.INSTANCE.set(getUnderlying());
  try {
    ODatabase current=underlying;
    while (!(current instanceof ODatabaseRecordTx) && ((ODatabaseComplexInternal<?>)current).getUnderlying() != null)     current=((ODatabaseComplexInternal<?>)current).getUnderlying();
    ((ODatabaseRecordTx)current).callOnOpenListeners();
  }
 catch (  Exception e) {
    OLogManager.instance().error(this,"Error on reusing database '%s' in pool",e,getName());
  }
}
