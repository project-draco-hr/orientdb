{
  long position=iPosition.longValue();
  position=position * RECORD_SIZE;
  acquireExclusiveLock();
  try {
    final long[] pos=fileSegment.getRelativePosition(position);
    fileSegment.files[(int)pos[0]].writeInt(pos[1] + OBinaryProtocol.SIZE_SHORT + OBinaryProtocol.SIZE_LONG+ OBinaryProtocol.SIZE_BYTE,iVersion);
  }
  finally {
    releaseExclusiveLock();
  }
}
