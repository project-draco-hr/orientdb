{
  if (OLogManager.instance().isDebugEnabled())   OLogManager.instance().debug(this,"Thread [" + Thread.currentThread() + "] is waiting for the resource "+ iResource+ " until "+ iTimeout+ "ms");
synchronized (queue) {
    List<Thread> waiters=queue.get(iResource);
    if (waiters == null) {
      waiters=new ArrayList<Thread>(DEFAULT_WAITERS);
      queue.put(iResource,waiters);
    }
    waiters.add(Thread.currentThread());
  }
  return !OSoftThread.pauseCurrentThread(iTimeout);
}
