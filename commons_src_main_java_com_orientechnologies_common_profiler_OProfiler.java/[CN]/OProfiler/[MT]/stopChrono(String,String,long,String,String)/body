{
  if (recordingFrom < 0)   return -1;
  updateMetadata(iDictionaryName,iDescription,METRIC_TYPE.CHRONO);
  acquireSharedLock();
  try {
    if (lastSnapshot != null)     lastSnapshot.stopChrono(iName,iStartTime,iPayload);
    return realTime.stopChrono(iName,iStartTime,iPayload);
  }
  finally {
    releaseSharedLock();
  }
}
