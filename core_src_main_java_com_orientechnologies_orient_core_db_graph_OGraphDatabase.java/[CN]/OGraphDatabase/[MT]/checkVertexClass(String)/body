{
  if (useCustomTypes && iVertexTypeName != null) {
    final OClass cls=getMetadata().getSchema().getClass(iVertexTypeName);
    if (cls == null)     throw new IllegalArgumentException("The class '" + iVertexTypeName + "' was not found");
    if (!cls.isSubClassOf(vertexBaseClass))     throw new IllegalArgumentException("The class '" + iVertexTypeName + "' does not extend the vertex type");
  }
}
