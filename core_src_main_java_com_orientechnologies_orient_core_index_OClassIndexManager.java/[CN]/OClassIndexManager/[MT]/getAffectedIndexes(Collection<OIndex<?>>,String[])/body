{
  if (indexes.isEmpty())   return indexes;
  if (dirtyFields.length == 0)   return Collections.emptyList();
  final List<OIndex<?>> affectedIndexes=new ArrayList<OIndex<?>>(indexes.size());
  final Set<String> fields=new HashSet<String>(Arrays.asList(dirtyFields));
  for (  OIndex<?> index : indexes)   if (!Collections.disjoint(fields,index.getDefinition().getFields()))   affectedIndexes.add(index);
  return affectedIndexes;
}
