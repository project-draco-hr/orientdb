{
  OLogManager.instance().warn(this,"Remote server node %s:%d seems down, retrying to connect...",node.networkAddress,node.networkPort);
  try {
    node.connect(networkTimeoutNode);
  }
 catch (  IOException e) {
    OLogManager.instance().warn(this,"Remote server node %s:%d is down, set it as DISCONNECTED and start to buffer changes",node.networkAddress,node.networkPort);
    node.setAsTemporaryDisconnected(serverOutSynchMaxBuffers);
  }
}
