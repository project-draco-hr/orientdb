{
  checkForDatabase();
  ORecordId rid;
  if (iRecordId.indexOf(':') > -1)   rid=new ORecordId(iRecordId);
 else {
    OIdentifiable rec=setCurrentRecord(Integer.parseInt(iRecordId));
    if (rec != null)     rid=(ORecordId)rec.getIdentity();
 else     return;
  }
  final ORawBuffer buffer=currentDatabase.getStorage().readRecord(rid,null,false,null,false,OStorage.LOCKING_STRATEGY.DEFAULT).getResult();
  if (buffer == null)   throw new OException("The record has been deleted");
  String content;
  if (Integer.parseInt(properties.get("maxBinaryDisplay")) < buffer.buffer.length)   content=new String(Arrays.copyOf(buffer.buffer,Integer.parseInt(properties.get("maxBinaryDisplay"))));
 else   content=new String(buffer.buffer);
  out.println("\nRaw record content. The size is " + buffer.buffer.length + " bytes, while settings force to print first "+ content.length()+ " bytes:\n\n"+ content);
}
