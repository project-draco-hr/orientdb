{
  String[] urlParts=checkSyntax(iRequest.url,3,"Syntax error: query/database/sql[/<limit>]<br/>Limit is optional and is setted to 20 by default. Set expressely to 0 to have no limits.");
  final int limit=urlParts.length > 3 ? Integer.parseInt(urlParts[3]) : 20;
  if (iRequest.content == null)   throw new IllegalArgumentException("No SQL expression found");
  final String text=iRequest.content;
  iRequest.data.commandInfo="Query";
  iRequest.data.commandDetail=text;
  if (!text.toLowerCase().startsWith("select"))   throw new IllegalArgumentException("Only SQL Select are valid using HTTP POST");
  ODatabaseDocumentTx db=null;
  final List<ORecord<?>> response;
  try {
    db=getProfiledDatabaseInstance(iRequest,urlParts[1]);
    response=(List<ORecord<?>>)db.command(new OSQLSynchQuery<ORecordSchemaAware<?>>(text,limit)).execute();
  }
  finally {
    if (db != null)     OSharedDocumentDatabase.releaseDatabase(db);
  }
  sendRecordsContent(iRequest,response);
}
