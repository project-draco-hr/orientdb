{
  acquireExclusiveLock();
  try {
    name=iName;
    configuration=new ODocument();
    indexDefinition=iIndexDefinition;
    if (iClusterIdsToIndex != null)     for (    final int id : iClusterIdsToIndex)     clustersToIndex.add(iDatabase.getClusterNameById(id));
    final OStreamSerializer keySerializer;
    if (indexDefinition != null && indexDefinition.getTypes().length > 1)     keySerializer=OCompositeKeySerializer.INSTANCE;
 else     keySerializer=OStreamSerializerLiteral.INSTANCE;
    map=new OMVRBTreeDatabaseLazySave<Object,T>(iDatabase,iClusterIndexName,keySerializer,iValueSerializer);
    installHooks(iDatabase);
    rebuild(iProgressListener);
    updateConfiguration();
  }
 catch (  Exception e) {
    if (map != null)     map.delete();
    if (e instanceof OIndexException)     throw (OIndexException)e;
    throw new OIndexException("Cannot create the index '" + iName + "'",e);
  }
 finally {
    releaseExclusiveLock();
  }
  return this;
}
