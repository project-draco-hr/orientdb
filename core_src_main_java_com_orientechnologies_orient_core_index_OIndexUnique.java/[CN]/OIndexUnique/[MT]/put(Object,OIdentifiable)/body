{
  checkForRebuild();
  modificationLock.requestModificationLock();
  try {
    acquireExclusiveLock();
    try {
      checkForKeyType(key);
      final OIdentifiable value=indexEngine.get(key);
      if (value != null) {
        if (!value.equals(iSingleValue))         throw new ORecordDuplicatedException(String.format("Cannot index record %s: found duplicated key '%s' in index '%s' previously assigned to the record %s",iSingleValue.getIdentity(),key,getName(),value.getIdentity()),value.getIdentity());
 else         return this;
      }
      if (!iSingleValue.getIdentity().isPersistent())       ((ORecord<?>)iSingleValue.getRecord()).save();
      indexEngine.put(key,iSingleValue.getIdentity());
      return this;
    }
  finally {
      releaseExclusiveLock();
    }
  }
  finally {
    modificationLock.releaseModificationLock();
  }
}
