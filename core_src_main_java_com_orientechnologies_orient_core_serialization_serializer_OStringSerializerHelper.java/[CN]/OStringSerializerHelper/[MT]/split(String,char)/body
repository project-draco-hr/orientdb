{
  final ArrayList<String> parts=new ArrayList<String>();
  final int max=iSource.length();
  final StringBuilder buffer=new StringBuilder();
  char c;
  for (int i=0; i < max; ++i) {
    c=iSource.charAt(i);
    if (c == iRecordSeparator) {
      parts.add(buffer.toString());
      buffer.setLength(0);
    }
 else     buffer.append(c);
  }
  parts.add(buffer.toString());
  return parts;
}
