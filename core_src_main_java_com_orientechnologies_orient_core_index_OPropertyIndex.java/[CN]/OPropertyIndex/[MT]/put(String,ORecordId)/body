{
  if (!active)   return;
  List<ORecordId> values=map.get(iKey);
  if (values == null)   values=new ArrayList<ORecordId>();
  if (unique) {
    if (values.size() > 0)     values.set(0,iSingleValue);
 else     values.add(iSingleValue);
  }
 else {
    int pos=values.indexOf(iSingleValue);
    if (pos > -1)     values.set(pos,iSingleValue);
 else     values.add(iSingleValue);
  }
  map.put(iKey,values);
}
