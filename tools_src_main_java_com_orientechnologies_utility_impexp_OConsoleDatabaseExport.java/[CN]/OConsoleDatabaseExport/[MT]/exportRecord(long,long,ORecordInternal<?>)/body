{
  if (rec == null)   return;
  if (rec.getIdentity().isValid())   rec.load();
  if (recordExported > 0)   writer.append(",");
  writer.append(rec.toJSON("rid,type,version,class,ident:4"));
  recordExported++;
  recordNum++;
  if (recordTot > 10 && (recordNum + 1) % (recordTot / 10) == 0)   listener.onMessage(".");
}
