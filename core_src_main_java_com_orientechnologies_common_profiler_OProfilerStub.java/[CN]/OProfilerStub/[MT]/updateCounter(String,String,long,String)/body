{
  if (statName == null || !isRecording())   return;
  Long oldValue;
  Long newValue;
  do {
    oldValue=counters.get(statName);
    if (oldValue == null) {
      if (!counters.containsKey(statName))       counters.put(statName,0L);
      oldValue=counters.get(statName);
    }
    newValue=oldValue + plus;
  }
 while (!replace(statName,oldValue,newValue));
}
