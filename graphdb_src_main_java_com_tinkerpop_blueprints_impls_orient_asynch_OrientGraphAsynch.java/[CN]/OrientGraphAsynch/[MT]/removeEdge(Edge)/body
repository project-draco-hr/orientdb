{
  beginAsynchOperation();
  Orient.instance().getWorkers().submit(new Callable<Object>(){
    @Override public Object call() throws Exception {
      final OrientBaseGraph g=acquire();
      try {
        g.removeEdge(edge);
      }
  finally {
        g.shutdown();
        endAsynchOperation();
      }
      return null;
    }
  }
);
}
