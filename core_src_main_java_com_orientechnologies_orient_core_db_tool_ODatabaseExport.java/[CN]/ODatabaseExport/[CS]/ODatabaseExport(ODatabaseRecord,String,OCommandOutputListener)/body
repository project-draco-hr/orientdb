{
  super(iDatabase,iFileName,iListener);
  if (fileName == null)   throw new IllegalArgumentException("file name missing");
  if (!fileName.endsWith(".gz")) {
    fileName+=".gz";
  }
  final File f=new File(fileName);
  if (f.getParentFile() != null)   f.getParentFile().mkdirs();
  if (f.exists())   f.delete();
  writer=new OJSONWriter(new OutputStreamWriter(new GZIPOutputStream(new FileOutputStream(fileName),16384)));
  writer.beginObject();
  iDatabase.getLocalCache().setEnable(false);
}
