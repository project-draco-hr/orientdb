{
  final StringBuilder cfg=new StringBuilder();
  cfg.append("{ \"*\" : { ");
  cfg.append("\"owner\" : \"");
  cfg.append(getId());
  cfg.append("\", ");
  cfg.append(iSynchronous ? "\"synch\"" : "\"asynch\"");
  cfg.append(" : [ \"");
  cfg.append(iAddress);
  cfg.append("\" ] } }");
  return addServerInConfiguration(iDatabaseName,iAddress,cfg.toString());
}
