{
  int pos=iName.indexOf(".");
  if (pos > -1) {
    final String up=iName.substring(0,pos);
    if (up.equals("PARENT") && parent != null)     return parent.getVariable(iName.substring(pos + 1));
  }
  final String name;
  pos=iName.indexOf("[");
  if (pos > -1)   name=iName.substring(0,pos);
 else   name=iName;
  Object result=null;
  if (variables != null && variables.containsKey(name))   result=variables.get(name);
 else   if (child != null)   result=child.getVariable(name);
  if (pos > -1)   result=ODocumentHelper.getFieldValue(result,iName);
  return result;
}
