{
  if (OScenarioThreadLocal.INSTANCE.get() == RUN_MODE.RUNNING_DISTRIBUTED)   return wrapped.createRecord(iDataSegmentId,iRecordId,iContent,iRecordVersion,iRecordType,iMode,iCallback);
  Object result=null;
  try {
    final String clusterName=getClusterNameByRID(iRecordId);
    final ODistributedConfiguration dConfig=dManager.getDatabaseConfiguration(getName());
    if (!dConfig.isReplicationActive(clusterName))     return wrapped.createRecord(iDataSegmentId,iRecordId,iContent,iRecordVersion,iRecordType,iMode,iCallback);
    result=dManager.sendRequest(getName(),clusterName,new OCreateRecordTask(iRecordId,iContent,iRecordVersion,iRecordType),EXECUTION_MODE.RESPONSE);
    if (result instanceof ONeedRetryException)     throw (ONeedRetryException)result;
 else     if (result instanceof Throwable)     throw new ODistributedException("Error on execution distributed CREATE_RECORD",(Throwable)result);
    iRecordId.clusterPosition=((OPhysicalPosition)result).clusterPosition;
    return new OStorageOperationResult<OPhysicalPosition>((OPhysicalPosition)result);
  }
 catch (  ONeedRetryException e) {
    throw e;
  }
catch (  Exception e) {
    handleDistributedException("Cannot route CREATE_RECORD operation against %s to the distributed node",e,iRecordId);
    return null;
  }
}
