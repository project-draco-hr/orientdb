{
  int disconnected=0;
  if (parent != null) {
    if (parent.left == this)     parent.left=null;
 else     parent.right=null;
    disconnected+=parent.disconnect(0,this,iForceDirty);
    parent=null;
  }
  if (left != null) {
    left.parent=null;
    disconnected+=left.disconnect(1,this,iForceDirty);
    left=null;
  }
  if (right != null) {
    right.parent=null;
    disconnected+=right.disconnect(2,this,iForceDirty);
    right=null;
  }
  return disconnected;
}
