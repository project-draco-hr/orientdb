{
  ORecord<?> rec;
  if (key instanceof ORecord<?>) {
    rec=(ORecord<?>)key;
    if (!rec.getIdentity().isValid())     rec.save();
  }
  if (value instanceof ORecord<?>) {
    rec=(ORecord<?>)value;
    if (!rec.getIdentity().isValid())     rec.save();
  }
  final V previous=super.put(key,value);
  if (insertionCounter > optimizeThreshold) {
    insertionCounter=0;
    optimize();
  }
 else   ++insertionCounter;
  return previous;
}
