{
  if (left != null) {
    if (left.dataProvider.setParent(newRid))     left.markDirty();
  }
  if (right != null) {
    if (right.dataProvider.setParent(newRid))     right.markDirty();
  }
  if (parent != null) {
    if (parent.left == this) {
      if (parent.dataProvider.setLeft(newRid))       parent.markDirty();
    }
 else     if (parent.right == this) {
      if (parent.dataProvider.setRight(newRid))       parent.markDirty();
    }
 else {
      OLogManager.instance().error(this,"[save]: Tree inconsistent entries.");
    }
  }
 else   if (pTree.getRoot() == this) {
    if (pTree.dataProvider.setRoot(newRid))     pTree.markDirty();
  }
}
