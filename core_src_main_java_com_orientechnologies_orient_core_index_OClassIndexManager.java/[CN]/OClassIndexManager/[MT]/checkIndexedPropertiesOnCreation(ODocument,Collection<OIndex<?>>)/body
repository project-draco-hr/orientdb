{
  for (  final OIndex<?> index : iIndexes) {
    final OIndexDefinition indexDefinition=index.getDefinition();
    final Object key=index.getDefinition().getDocumentValueToIndex(iRecord);
    if (key instanceof Collection) {
      for (      final Object keyItem : (Collection<?>)key) {
        if (!indexDefinition.isNullValuesIgnored() || keyItem != null)         index.checkEntry(iRecord,keyItem);
      }
    }
 else {
      if (!indexDefinition.isNullValuesIgnored() || key != null)       index.checkEntry(iRecord,key);
    }
  }
}
