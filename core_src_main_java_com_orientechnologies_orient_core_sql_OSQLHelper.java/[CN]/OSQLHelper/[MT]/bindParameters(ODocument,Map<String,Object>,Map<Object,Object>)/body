{
  int paramCounter=0;
  for (  Entry<String,Object> field : iFields.entrySet()) {
    if (field.getValue() instanceof OSQLFilterItemField) {
      final OSQLFilterItemField f=(OSQLFilterItemField)field.getValue();
      if (f.getName().equals("?"))       iDocument.field(field.getKey(),iArgs.get(paramCounter++));
 else       if (f.getName().startsWith(":"))       iDocument.field(field.getKey(),iArgs.get(f.getName().substring(1)));
    }
 else     iDocument.field(field.getKey(),OSQLHelper.getValue(field.getValue(),iDocument));
  }
}
