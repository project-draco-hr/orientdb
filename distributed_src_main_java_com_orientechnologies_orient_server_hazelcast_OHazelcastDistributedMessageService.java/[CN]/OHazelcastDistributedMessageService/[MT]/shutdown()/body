{
  running=false;
  if (responseThread != null) {
    responseThread.interrupt();
    if (!nodeResponseQueue.isEmpty())     try {
      responseThread.join();
    }
 catch (    InterruptedException e) {
    }
    responseThread=null;
  }
  for (  Entry<String,OHazelcastDistributedDatabase> m : databases.entrySet())   m.getValue().shutdown();
  asynchMessageManager.cancel();
  responsesByRequestIds.clear();
  if (nodeResponseQueue != null) {
    nodeResponseQueue.clear();
    nodeResponseQueue.destroy();
  }
}
