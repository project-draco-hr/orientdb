{
  try {
    OLogManager.instance().info(this,"Thread [%d] waiting for %dms with locked record [%s]",Thread.currentThread().getId(),delay,rid.toString());
    Thread.sleep(delay);
    OLogManager.instance().info(this,"Thread [%d] finished waiting for %dms with locked record [%s]",Thread.currentThread().getId(),delay,rid.toString());
  }
 catch (  InterruptedException e) {
  }
}
