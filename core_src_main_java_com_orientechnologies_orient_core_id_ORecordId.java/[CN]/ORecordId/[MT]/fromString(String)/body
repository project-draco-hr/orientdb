{
  if (iRecordId == null) {
    clusterId=CLUSTER_ID_INVALID;
    clusterPosition=CLUSTER_POS_INVALID;
    return;
  }
  if (!iRecordId.contains(SEPARATOR))   throw new IllegalArgumentException("Argument is not a RecordId in form of string. Format must be: <cluster-id>:<cluster-position>");
  final String parts[]=iRecordId.split(SEPARATOR);
  if (parts.length != 2)   throw new IllegalArgumentException("Argument is not a RecordId in form of string. Format must be: <cluster-id>:<cluster-position>");
  clusterId=Integer.parseInt(parts[0]);
  checkClusterLimits();
  clusterPosition=Long.parseLong(parts[1]);
}
