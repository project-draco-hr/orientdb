{
  if (timer != null) {
    timer.cancel();
    timer=null;
  }
  if (iSeconds > 0) {
    final int ms=iSeconds * 1000;
    timer=new Timer(true);
    timer.scheduleAtFixedRate(new TimerTask(){
      @Override public void run(){
        System.out.println(OProfiler.getInstance().dump());
        if (autoDumpReset)         reset();
      }
    }
,ms,ms);
  }
}
