{
  ODistributedServerLog.debug(this,iManager.getLocalNodeName(),getNodeSource(),DIRECTION.IN,"updating record %s/%s v.%s",iDatabaseName,rid.toString(),version.toString());
  final ORecordInternal<?> record=Orient.instance().getRecordFactoryManager().newInstance(recordType);
  final ODatabaseDocumentTx database=openDatabase(iServer,iDatabaseName);
  try {
    record.fill(rid,version,content,true);
    record.save();
    ODistributedServerLog.debug(this,iManager.getLocalNodeName(),getNodeSource(),DIRECTION.IN,"+-> updated record %s/%s v.%s",iDatabaseName,rid.toString(),record.getRecordVersion().toString());
    return record.getRecordVersion();
  }
  finally {
    closeDatabase(database);
  }
}
