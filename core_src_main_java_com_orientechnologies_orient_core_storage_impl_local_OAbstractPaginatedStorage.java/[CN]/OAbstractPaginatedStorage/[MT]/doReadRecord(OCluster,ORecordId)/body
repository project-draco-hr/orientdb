{
  try {
    ORawBuffer buff;
    buff=clusterSegment.readRecord(rid.clusterPosition);
    if (OLogManager.instance().isDebugEnabled())     OLogManager.instance().debug(this,"Read record %s v.%s size=%d bytes",rid,buff.version,buff.buffer != null ? buff.buffer.length : 0);
    return buff;
  }
 catch (  IOException e) {
    throw new OStorageException("Error during read of record with rid = " + rid,e);
  }
}
