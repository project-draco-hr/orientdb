{
  externalModificationLock.requestModificationLock();
  try {
    OAtomicOperation atomicOperation=startAtomicOperation();
    acquireExclusiveLock();
    try {
      fileId=addFile(atomicOperation,name + DEF_EXTENSION);
      initCusterState(atomicOperation);
      if (config.root.clusters.size() <= config.id)       config.root.clusters.add(config);
 else       config.root.clusters.set(config.id,config);
      clusterPositionMap.create();
      endAtomicOperation(false);
    }
 catch (    Throwable e) {
      endAtomicOperation(true);
      throw new OStorageException("Error during creation of cluster with name " + name,e);
    }
 finally {
      releaseExclusiveLock();
    }
  }
  finally {
    externalModificationLock.releaseModificationLock();
  }
}
