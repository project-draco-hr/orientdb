{
  final Pointer ptr=new Pointer(pointer);
  if (unaligned)   return ptr.getLong(0);
  if (alignedOrder.equals(ByteOrder.BIG_ENDIAN))   return (0xFFL & ptr.getByte(0)) << 56 | (0xFFL & ptr.getByte(1)) << 48 | (0xFFL & ptr.getByte(2)) << 40 | (0xFFL & ptr.getByte(3)) << 32 | (0xFFL & ptr.getByte(4)) << 24 | (0xFFL & ptr.getByte(5)) << 16 | (0xFFL & ptr.getByte(6)) << 8 | (0xFFL & ptr.getByte(7));
  return (0xFFL & ptr.getByte(0)) | (0xFFL & ptr.getByte(1)) << 8 | (0xFFL & ptr.getByte(2)) << 16 | (0xFFL & ptr.getByte(3)) << 24 | (0xFFL & ptr.getByte(4)) << 32 | (0xFFL & ptr.getByte(5)) << 40 | (0xFFL & ptr.getByte(6)) << 48 | (0xFFL & ptr.getByte(7)) << 56;
}
