{
  if (iLanguage == null)   throw new OCommandScriptException("No language was specified");
  final String lang=iLanguage.toLowerCase();
  if (!engines.containsKey(lang))   throw new OCommandScriptException("Unsupported language: " + iLanguage + ". Supported languages are: "+ engines);
  final ScriptEngine scriptEngine=engines.get(lang);
  if (scriptEngine == null)   throw new OCommandScriptException("Cannot find script engine: " + iLanguage);
  return scriptEngine;
}
