{
  final String nodeId=getNodeId(clusterMember);
  if (getLocalNodeId().equals(nodeId)) {
    return;
  }
  if (iAlreadyPresent)   OLogManager.instance().warn(this,"DISTRIBUTED -> detected running node %s, start aligning dbs...",nodeId);
 else   OLogManager.instance().warn(this,"DISTRIBUTED -> connected node %s, start aligning dbs...",nodeId);
  remoteClusterNodes.put(nodeId,clusterMember);
  int aligned=0;
  for (  OStorageSynchronizer r : synchronizers.values()) {
    OLogManager.instance().warn(this,"DISTRIBUTED -> * db %s: aligning records...",r.toString());
    final int[] a=r.align(nodeId);
    final int tot=a[0] + a[1] + a[2];
    OLogManager.instance().warn(this,"DISTRIBUTED -> * db %s: aligned %d records (%d created, %d updated, %d deleted)",r.toString(),tot,a[0],a[1],a[2]);
    aligned+=tot;
  }
  OLogManager.instance().warn(this,"DISTRIBUTED -> alignment completed against cluster node %s. Total records: %d",nodeId,aligned);
}
