{
  if (in == null)   return;
  final StringBuilder dirtyBuffer=new StringBuilder(MAX_LENGTH_DEBUG);
  int i=0;
  while (in.available() > 0) {
    char c=(char)in.read();
    ++i;
    if (dirtyBuffer.length() < MAX_LENGTH_DEBUG)     dirtyBuffer.append(c);
  }
  OLogManager.instance().error(this,"Received unread response from " + socket.getRemoteSocketAddress() + " probably corrupted data from the network connection. Cleared dirty data in the buffer ("+ i+ " bytes): ["+ dirtyBuffer+ (i > dirtyBuffer.length() ? "..." : "")+ "]",OIOException.class);
}
