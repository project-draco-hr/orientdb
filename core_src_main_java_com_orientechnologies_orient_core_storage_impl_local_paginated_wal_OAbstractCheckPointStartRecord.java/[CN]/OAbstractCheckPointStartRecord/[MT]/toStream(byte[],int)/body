{
  if (lsn == null) {
    content[offset]=0;
    offset++;
    return offset;
  }
  content[offset]=1;
  offset++;
  OLongSerializer.INSTANCE.serializeNative(lsn.getSegment(),content,offset);
  offset+=OLongSerializer.LONG_SIZE;
  OLongSerializer.INSTANCE.serializeNative(lsn.getPosition(),content,offset);
  offset+=OLongSerializer.LONG_SIZE;
  return offset;
}
