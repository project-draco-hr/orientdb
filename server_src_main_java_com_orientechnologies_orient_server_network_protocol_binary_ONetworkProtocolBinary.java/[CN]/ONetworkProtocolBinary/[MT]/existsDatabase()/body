{
  setDataCommandInfo("Exists database");
  final String dbName=channel.readString();
  checkServerAccess("database.exists");
  ODatabaseDocumentTx databaseDocumentTx=getDatabaseInstance(dbName,ODatabaseDocument.TYPE,"plocal",false);
  if (databaseDocumentTx != null)   connection.database=databaseDocumentTx;
  beginResponse();
  try {
    sendOk(clientTxId);
    if (databaseDocumentTx == null)     channel.writeByte((byte)0);
 else     channel.writeByte((byte)(databaseDocumentTx.exists() ? 1 : 0));
  }
  finally {
    endResponse();
  }
}
