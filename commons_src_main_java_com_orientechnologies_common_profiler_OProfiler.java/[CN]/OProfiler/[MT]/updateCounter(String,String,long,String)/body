{
  if (iName == null || recordingFrom < 0)   return;
  updateMetadata(iMetadata,iDescription,METRIC_TYPE.COUNTER);
  acquireSharedLock();
  try {
    if (lastSnapshot != null)     lastSnapshot.updateCounter(iName,iPlus);
    realTime.updateCounter(iName,iPlus);
  }
  finally {
    releaseSharedLock();
  }
}
