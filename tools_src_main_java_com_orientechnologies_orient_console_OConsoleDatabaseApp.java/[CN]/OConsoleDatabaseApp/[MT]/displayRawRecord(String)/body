{
  checkCurrentDatabase();
  ORecordId rid=new ORecordId(iRecordId);
  final ORawBuffer buffer=currentDatabase.getStorage().readRecord(rid,null,false,null);
  if (buffer == null)   throw new OException("The record has been deleted");
  String content;
  if (Integer.parseInt(properties.get("maxBinaryDisplay")) < buffer.buffer.length)   content=new String(Arrays.copyOf(buffer.buffer,Integer.parseInt(properties.get("maxBinaryDisplay"))));
 else   content=new String(buffer.buffer);
  out.println("Raw record content. The size is " + buffer.buffer.length + " bytes, while settings force to print first "+ content.length()+ " bytes:\n\n"+ new String(content));
}
