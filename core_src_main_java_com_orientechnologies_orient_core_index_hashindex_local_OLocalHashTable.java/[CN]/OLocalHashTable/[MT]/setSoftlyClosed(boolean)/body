{
  acquireSharedLock();
  try {
    metadataStore.setSoftlyClosed(softlyClosed);
    treeStateStore.setSoftlyClosed(softlyClosed);
    for (int i=0; i < filesMetadata.length; i++) {
      if (filesMetadata[i] != null)       diskCache.setSoftlyClosed(fileLevelIds[i],softlyClosed);
    }
    if (nullKeyIsSupported)     diskCache.setSoftlyClosed(nullBucketFileId,softlyClosed);
  }
 catch (  IOException ioe) {
    throw new OIndexException("Error during integrity check",ioe);
  }
 finally {
    releaseSharedLock();
  }
}
