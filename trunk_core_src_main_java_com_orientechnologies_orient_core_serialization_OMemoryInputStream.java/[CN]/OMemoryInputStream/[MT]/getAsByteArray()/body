{
  if (position > buffer.length)   throw new EOFException("Reached end of stream. Requested position was #" + position + " while the size is "+ buffer.length);
  final int size=OBinaryProtocol.bytes2int(buffer,position);
  position+=OConstants.SIZE_INT;
  final byte[] portion=Arrays.copyOfRange(buffer,position,position + size);
  position+=size;
  return portion;
}
