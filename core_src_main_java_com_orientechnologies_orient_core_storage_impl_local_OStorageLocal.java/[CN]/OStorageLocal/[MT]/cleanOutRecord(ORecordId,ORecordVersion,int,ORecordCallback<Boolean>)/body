{
  final OCluster cluster=getClusterById(recordId.clusterId);
  modificationLock.requestModificationLock();
  try {
    final OPhysicalPosition ppos=deleteRecord(cluster,recordId,recordVersion,false);
    if (ppos != null && (OGlobalConfiguration.NON_TX_RECORD_UPDATE_SYNCH.getValueAsBoolean() || clustersToSyncImmediately.contains(cluster.getName())))     synchRecordUpdate(cluster,ppos);
    final boolean returnValue=ppos != null;
    if (callback != null)     callback.call(recordId,returnValue);
    return returnValue;
  }
  finally {
    modificationLock.releaseModificationLock();
  }
}
