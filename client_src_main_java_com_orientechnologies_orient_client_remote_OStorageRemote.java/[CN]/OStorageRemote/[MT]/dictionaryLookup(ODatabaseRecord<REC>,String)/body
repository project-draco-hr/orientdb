{
  checkConnection();
  do {
    boolean locked=lock.acquireExclusiveLock();
    try {
      try {
        beginRequest(OChannelBinaryProtocol.REQUEST_DICTIONARY_LOOKUP);
        network.writeString(iKey);
      }
  finally {
        endRequest();
      }
      try {
        beginResponse();
        return (REC)readRecordFromNetwork(iDatabase);
      }
  finally {
        endResponse();
      }
    }
 catch (    Exception e) {
      if (handleException("Error on lookup record with key: " + iKey,e))       break;
    }
 finally {
      lock.releaseExclusiveLock(locked);
    }
  }
 while (true);
  return null;
}
