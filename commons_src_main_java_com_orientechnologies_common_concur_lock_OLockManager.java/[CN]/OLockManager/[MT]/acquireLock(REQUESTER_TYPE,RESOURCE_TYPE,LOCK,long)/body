{
  if (tryToAcquireLock(iRequester,iResourceId,iLockType))   return;
  if (lockQueue.waitForResource(iResourceId,iTimeout))   throw new OLockException("Resource " + iResourceId + " is locked");
  if (!tryToAcquireLock(iRequester,iResourceId,iLockType))   throw new OLockException("Resource " + iResourceId + " is locked");
}
