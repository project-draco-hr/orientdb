{
  int nInts=shift >>> 5;
  if (nInts == CHUNKS_SIZE)   return ZERO;
  int nBits=shift & 0x1f;
  final int result[]=new int[CHUNKS_SIZE];
  if (nBits != 0) {
    int nBits2=32 - nBits;
    int i=0;
    int j=nInts;
    result[j++]=chunks[i] >>> nBits;
    while (j < CHUNKS_SIZE)     result[j++]=chunks[i++] << nBits2 | chunks[i] >>> nBits;
  }
 else   System.arraycopy(chunks,0,result,nInts,CHUNKS_SIZE - nInts);
  if (Arrays.equals(ZERO.chunks,result))   return ZERO;
  return new ONodeId(result,signum);
}
