{
  long sum=0;
  for (long i=0; i < mainBucketsSize; i++) {
    OClusterLocalLHPEBucket bucket=loadMainBucket(i);
    sum+=bucket.getSize();
    while (bucket.getOverflowBucket() > 0) {
      bucket=loadOverflowBucket(bucket.getOverflowBucket());
      sum+=bucket.getSize();
    }
  }
  clearCache();
  return sum;
}
