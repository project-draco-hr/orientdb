{
  this.pagePointer=pagePointer;
  if (newPage) {
    OIntegerSerializer.INSTANCE.serializeInDirectMemory(PAGE_SIZE,directMemory,pagePointer + FREE_POSITION_OFFSET);
    OIntegerSerializer.INSTANCE.serializeInDirectMemory(PAGE_SIZE - PAGE_INDEXES_OFFSET,directMemory,pagePointer + FREE_SPACE_COUNTER_OFFSET);
  }
}
