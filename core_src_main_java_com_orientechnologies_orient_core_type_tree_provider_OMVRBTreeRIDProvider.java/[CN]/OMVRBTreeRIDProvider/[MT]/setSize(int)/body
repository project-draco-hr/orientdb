{
  if (embeddedStreaming)   super.setSize(iSize);
 else {
    final OMVRBTreeEntryPersistent<OIdentifiable,OIdentifiable> r=(OMVRBTreeEntryPersistent<OIdentifiable,OIdentifiable>)tree.getRoot();
    if (r != null) {
      final OMVRBTreeRIDEntryProvider provider=(OMVRBTreeRIDEntryProvider)r.getProvider();
      if (provider != null && provider.setTreeSize(iSize))       r.markDirty();
      return true;
    }
  }
  return false;
}
