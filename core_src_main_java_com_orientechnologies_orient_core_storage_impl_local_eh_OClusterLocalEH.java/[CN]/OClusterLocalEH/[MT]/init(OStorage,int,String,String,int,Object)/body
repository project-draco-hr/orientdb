{
  OFileUtils.checkValidName(iClusterName);
  OStorageFileConfiguration clusterStateConfiguration=new OStorageFileConfiguration(null,OStorageVariableParser.DB_PATH_VARIABLE + "/" + config.name+ CLUSTER_STATE_FILE_EXTENSION,OFileFactory.CLASSIC,null,"50%");
  config.dataSegmentId=iDataSegmentId;
  storage=(OStorageLocal)iStorage;
  name=iClusterName;
  id=iId;
  clusterStateHolder=new OSingleFileSegment(storage,clusterStateConfiguration);
}
