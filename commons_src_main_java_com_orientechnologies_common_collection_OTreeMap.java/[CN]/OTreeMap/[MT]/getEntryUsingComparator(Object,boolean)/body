{
  K k=(K)key;
  Comparator<? super K> cpr=comparator;
  if (cpr != null) {
    OTreeMapEntry<K,V> p=root;
    OTreeMapEntry<K,V> lastNode=null;
    while (p != null) {
      lastNode=p;
      int beginKey=cpr.compare(k,p.getFirstKey());
      if (beginKey < 0)       p=p.getLeft();
 else       if (beginKey > 0) {
        if (cpr.compare(k,p.getLastKey()) > 0)         p=p.getRight();
 else         break;
      }
 else {
        pageIndex=0;
        return p;
      }
    }
    if (lastNode != null) {
      for (int i=1; i < lastNode.getSize(); ++i) {
        int cmp=cpr.compare(k,lastNode.getKey(i));
        if (cmp == 0) {
          lastNode.getValue(i);
          pageItemFound=true;
          return lastNode;
        }
 else         if (cmp < 0)         break;
      }
      if (iGetContainer)       return lastNode;
    }
  }
  return null;
}
