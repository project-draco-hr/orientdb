{
  super(iManager.getConfig().networkMulticastHeartbeat * 1000,Orient.getThreadGroup(),"OrientDB Distributed-DiscoverySignaler");
  manager=iManager;
  final String buffer=ODistributedServerConfiguration.PACKET_HEADER + OConstants.ORIENT_VERSION + "|"+ ODistributedServerConfiguration.PROTOCOL_VERSION+ "|"+ manager.getConfig().name+ "|"+ iNetworkListener.getInboundAddr().getHostName()+ "|"+ iNetworkListener.getInboundAddr().getPort();
  discoveryPacket=OSecurityManager.instance().encrypt(manager.getConfig().securityAlgorithm,manager.getConfig().securityKey,buffer.getBytes());
  start();
  startTimeoutPresenceTask();
}
