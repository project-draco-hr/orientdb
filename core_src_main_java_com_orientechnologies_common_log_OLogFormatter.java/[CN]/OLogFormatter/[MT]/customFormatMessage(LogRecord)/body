{
  Level iLevel=iRecord.getLevel();
  String iMessage=iRecord.getMessage();
  Object[] iAdditionalArgs=iRecord.getParameters();
  String iRequester=getSourceClassSimpleName(iRecord.getLoggerName());
  final StringBuilder buffer=new StringBuilder(512);
  buffer.append(EOL);
synchronized (dateFormat) {
    buffer.append(dateFormat.format(new Date()));
  }
  buffer.append(String.format(" %-5s ",iLevel.getName()));
  try {
    if (iAdditionalArgs != null)     buffer.append(String.format(iMessage,iAdditionalArgs));
 else     buffer.append(iMessage);
  }
 catch (  Exception e) {
    buffer.append(iMessage);
  }
  if (iRequester != null) {
    buffer.append(" [");
    buffer.append(iRequester);
    buffer.append(']');
  }
  return buffer.toString();
}
