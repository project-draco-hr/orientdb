{
  if (!iRid.isValid())   return null;
  if (!OFetchHelper.isFetchPlanValid(iFetchPlan)) {
    throw new IllegalArgumentException("Fetch plan '" + iFetchPlan + "' is invalid");
  }
  try {
    return storage.readRecord(databaseOwner,iRid,iFetchPlan);
  }
 catch (  Throwable t) {
    throw new ODatabaseException("Error on retrieving record " + iRid + " (cluster: "+ storage.getPhysicalClusterNameById(iRid.clusterId)+ ")",t);
  }
}
