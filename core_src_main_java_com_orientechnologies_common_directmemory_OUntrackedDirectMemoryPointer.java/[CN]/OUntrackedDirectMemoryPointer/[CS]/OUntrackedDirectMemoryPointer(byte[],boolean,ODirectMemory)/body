{
  this.safeMode=safeMode;
  this.directMemory=directMemory;
  if (data.length == 0)   throw new ODirectMemoryViolationException("Size of allocated area should be more than zero but 0 was provided.");
  this.pageSize=data.length;
  this.dataPointer=this.directMemory.allocate(pageSize);
  set(0,data,0,data.length);
}
