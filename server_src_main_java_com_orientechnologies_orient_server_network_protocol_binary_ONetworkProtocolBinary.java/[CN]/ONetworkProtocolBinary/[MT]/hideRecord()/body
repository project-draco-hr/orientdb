{
  setDataCommandInfo("Hide record");
  if (!isConnectionAlive())   return;
  final ORID rid=channel.readRID();
  final byte mode=channel.readByte();
  final int result=hideRecord(connection.database,rid);
  if (mode < 2) {
    beginResponse();
    try {
      sendOk(clientTxId);
      channel.writeByte((byte)result);
    }
  finally {
      endResponse();
    }
  }
}
