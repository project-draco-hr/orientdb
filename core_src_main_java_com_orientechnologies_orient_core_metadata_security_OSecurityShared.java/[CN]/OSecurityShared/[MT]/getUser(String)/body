{
  acquireExclusiveLock();
  try {
    final List<ODocument> result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from OUser where name = '" + iUserName + "'").setFetchPlan("*:-1")).execute();
    if (result != null && !result.isEmpty())     return new OUser(result.get(0));
    return null;
  }
  finally {
    releaseExclusiveLock();
  }
}
