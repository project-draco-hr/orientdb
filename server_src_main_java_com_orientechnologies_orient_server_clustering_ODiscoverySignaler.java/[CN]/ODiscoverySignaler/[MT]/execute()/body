{
  if (dgram == null) {
    sendShutdown();
    return;
  }
  OLogManager.instance().debug(this,"Sending node presence signal over the network against IP Multicast %s:%d...",dgram.getAddress(),dgram.getPort());
  try {
    socket.send(dgram);
  }
 catch (  Throwable t) {
    sendShutdown();
    OLogManager.instance().error(this,"Error on sending signal for distributed server presence, probably the IP MULTICAST is disabled in current network configuration: %s",t.getMessage());
  }
 finally {
  }
}
