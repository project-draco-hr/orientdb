{
  checkDatabase();
  if (iClusterName == null)   return -1;
  if (Character.isDigit(iClusterName.charAt(0)))   return Integer.parseInt(iClusterName);
  boolean locked=acquireSharedLock();
  try {
    final Integer id=clusters.get(iClusterName.toLowerCase());
    if (id == null)     throw new IllegalArgumentException("Cluster " + iClusterName + " id not defined in database "+ name);
    return id;
  }
  finally {
    releaseSharedLock(locked);
  }
}
