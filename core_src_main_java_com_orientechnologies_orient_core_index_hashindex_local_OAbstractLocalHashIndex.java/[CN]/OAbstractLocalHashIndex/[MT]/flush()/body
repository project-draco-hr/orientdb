{
  acquireExclusiveLock();
  try {
    if (metadataStore.getFile().isOpen())     storeMetadata();
    if (treeStateStore.getFile().isOpen())     storeHashTree();
  }
 catch (  IOException e) {
    throw new OIndexException("Error during index save",e);
  }
 finally {
    releaseExclusiveLock();
  }
}
