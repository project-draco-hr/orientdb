{
  Integer depthLevel;
  if (iFetchPlan != null) {
    depthLevel=iFetchPlan.get(iFieldName);
    if (depthLevel == null) {
      OClass cls=record.getSchemaClass();
      while (cls != null && depthLevel == null) {
        depthLevel=iFetchPlan.get(cls.getName() + "." + iFieldName);
        if (depthLevel == null)         cls=cls.getSuperClass();
      }
      if (depthLevel == null && iFetchPlan.containsKey(OFetchHelper.ANY_FIELD))       depthLevel=iFetchPlan.get(OFetchHelper.ANY_FIELD);
    }
  }
 else   depthLevel=-1;
  return depthLevel;
}
