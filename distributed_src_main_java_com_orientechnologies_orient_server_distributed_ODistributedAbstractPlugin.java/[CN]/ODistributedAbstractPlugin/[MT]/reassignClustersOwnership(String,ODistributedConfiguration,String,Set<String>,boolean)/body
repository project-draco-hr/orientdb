{
  final ODatabaseDocumentTx database=(ODatabaseDocumentTx)serverInstance.openDatabase(databaseName,"internal","internal",null,true);
  try {
    return executeInDistributedDatabaseLock(databaseName,new OCallable<Boolean,ODistributedConfiguration>(){
      @Override public Boolean call(      final ODistributedConfiguration cfg){
        return rebalanceClusterOwnership(iNode,database,cfg,clustersWithNotAvailableOwner,rebalance);
      }
    }
);
  }
  finally {
    database.close();
  }
}
