{
  final OClass cls=checkVertexClass(iClassName);
  final ODocument vertex=new ODocument(cls).setOrdered(true);
  if (iFields != null)   if (iFields != null)   if (iFields.length == 1) {
    Object f=iFields[0];
    if (f instanceof Map<?,?>)     vertex.fields((Map<String,Object>)f);
 else     throw new IllegalArgumentException("Invalid fields: expecting a pairs of fields as String,Object or a single Map<String,Object>, but found: " + f);
  }
 else   for (int i=0; i < iFields.length; i+=2)   vertex.field(iFields[i].toString(),iFields[i + 1]);
  return vertex;
}
