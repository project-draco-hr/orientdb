{
  File file=new File(HISTORY_FILE_NAME);
  if (!file.exists()) {
    try {
      file.mkdirs();
      file.createNewFile();
    }
 catch (    IOException ioe) {
      OLogManager.instance().error(this,"Error creating history file.",ioe,"");
    }
  }
 else   if (!read) {
    file.delete();
    try {
      file.mkdirs();
      file.createNewFile();
    }
 catch (    IOException ioe) {
      OLogManager.instance().error(this,"Error creating history file.",ioe,"");
    }
  }
  return file;
}
