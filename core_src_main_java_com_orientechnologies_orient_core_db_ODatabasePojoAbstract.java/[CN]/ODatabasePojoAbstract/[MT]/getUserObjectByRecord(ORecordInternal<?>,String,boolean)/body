{
  checkOpeness();
  if (!(iRecord instanceof ODocument))   return null;
  final ODocument record=(ODocument)iRecord;
  T pojo=records2Objects.get(iRecord);
  if (pojo == null && iCreate) {
    try {
      if (iRecord.getDatabase() != underlying)       iRecord.setDatabase(underlying);
      if (record.getInternalStatus() == STATUS.NOT_LOADED)       record.load();
      pojo=newInstance(record.getClassName());
      registerPojo(pojo,record);
      stream2pojo(record,pojo,iFetchPlan);
    }
 catch (    Exception e) {
      throw new OConfigurationException("Can't retrieve pojo from the record " + record,e);
    }
  }
  return pojo;
}
