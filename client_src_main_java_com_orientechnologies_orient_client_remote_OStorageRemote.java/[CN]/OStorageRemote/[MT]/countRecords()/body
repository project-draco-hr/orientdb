{
  checkConnection();
  do {
    try {
      OChannelBinaryClient network=null;
      try {
        network=beginRequest(OChannelBinaryProtocol.REQUEST_DB_COUNTRECORDS);
      }
  finally {
        endRequest(network);
      }
      try {
        beginResponse(network);
        return network.readLong();
      }
  finally {
        endResponse(network);
      }
    }
 catch (    OException e) {
      throw e;
    }
catch (    Exception e) {
      handleException("Error on read database record count",e);
    }
  }
 while (true);
}
