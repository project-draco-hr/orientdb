{
  if (!targetNode.equals(iManager.getLocalNodeName()))   return Boolean.FALSE;
  final File f=new File(fileName);
  if (!f.exists())   throw new IllegalArgumentException("File name '" + fileName + "' not found");
  final ODistributedDatabaseChunk result=new ODistributedDatabaseChunk(f,offset,ODeployDatabaseTask.CHUNK_MAX_SIZE);
  ODistributedServerLog.warn(this,iManager.getLocalNodeName(),getNodeSource(),ODistributedServerLog.DIRECTION.OUT,"- transferring chunk #%d offset=%d size=%s...",chunkNum,result.offset,OFileUtils.getSizeAsNumber(result.buffer.length));
  return result;
}
