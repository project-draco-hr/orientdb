{
  try {
    final ORawBuffer buffer=storage.readRecord(iClusterSegment,iRid,false);
    txSegment.addLog(OTxSegment.OPERATION_UPDATE,iTxId,iRid.clusterId,iRid.clusterPosition,iRecordType,buffer.version - 1,buffer.buffer);
    return storage.updateRecord(iClusterSegment,iRid,iContent,iVersion,iRecordType);
  }
 catch (  IOException e) {
    OLogManager.instance().error(this,"Error on updating entry #" + iRid + " in log segment: "+ iClusterSegment,e,OTransactionException.class);
  }
  return -1;
}
