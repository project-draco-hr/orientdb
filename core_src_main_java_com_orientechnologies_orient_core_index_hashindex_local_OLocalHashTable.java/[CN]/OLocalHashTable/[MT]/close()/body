{
  acquireExclusiveLock();
  try {
    flushSplitBucketsBuffer();
    if (metadataStore.getFile().isOpen())     metadataStore.close();
    if (treeStateStore.getFile().isOpen())     treeStateStore.close();
    for (int i=0; i < filesMetadata.length; i++)     if (filesMetadata[i] != null)     buffer.closeFile(name + i,bucketFileExtension);
  }
 catch (  InterruptedException e) {
    throw new OIndexException("Error during hash table close",e);
  }
catch (  IOException e) {
    throw new OIndexException("Error during hash table close",e);
  }
 finally {
    releaseExclusiveLock();
  }
}
