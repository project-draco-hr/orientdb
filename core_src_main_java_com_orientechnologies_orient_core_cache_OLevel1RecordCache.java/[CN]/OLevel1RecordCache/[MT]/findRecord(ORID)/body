{
  if (!isEnabled()) {
    if (rid.getClusterId() != excludedCluster)     return secondary.retrieveRecord(rid);
 else     return null;
  }
  ORecordInternal<?> record;
  underlying.lock(rid);
  try {
    record=underlying.get(rid);
    if (record == null) {
      record=secondary.retrieveRecord(rid);
      if (record != null)       underlying.put(record);
    }
  }
  finally {
    underlying.unlock(rid);
  }
  if (record != null)   Orient.instance().getProfiler().updateCounter(CACHE_HIT,"Record found in Level1 Cache",1L);
 else   Orient.instance().getProfiler().updateCounter(CACHE_MISS,"Record not found in Level1 Cache",1L);
  return record;
}
