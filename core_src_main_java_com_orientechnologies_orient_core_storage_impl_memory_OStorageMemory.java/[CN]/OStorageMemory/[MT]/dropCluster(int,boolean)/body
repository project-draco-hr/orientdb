{
  lock.acquireExclusiveLock();
  try {
    final OCluster c=clusters.get(iClusterId);
    if (c != null) {
      if (iTruncate)       c.truncate();
      c.delete();
      clusters.set(iClusterId,null);
      clusterMap.remove(c.getName());
    }
  }
 catch (  IOException e) {
  }
 finally {
    lock.releaseExclusiveLock();
  }
  return false;
}
