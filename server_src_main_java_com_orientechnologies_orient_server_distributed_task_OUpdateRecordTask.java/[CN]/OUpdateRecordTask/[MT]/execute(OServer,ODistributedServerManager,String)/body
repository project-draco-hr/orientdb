{
  ODistributedServerLog.debug(this,iManager.getLocalNodeName(),getNodeSource(),DIRECTION.IN,"- updating record %s/%s v.%s oper=%d.%d",iDatabaseName,rid.toString(),version.toString(),runId,operationSerial);
  final ORecordInternal<?> record=Orient.instance().getRecordFactoryManager().newInstance(recordType);
  final ODatabaseDocumentTx database=openDatabase(iServer,iDatabaseName);
  try {
    record.fill(rid,version,content,true);
    record.save();
    ODistributedServerLog.debug(this,iManager.getLocalNodeName(),getNodeSource(),DIRECTION.IN,"updated record %s/%s v.%s oper=%d.%d",iDatabaseName,rid.toString(),record.getRecordVersion().toString(),runId,operationSerial);
    return record.getRecordVersion();
  }
  finally {
    closeDatabase(database);
  }
}
