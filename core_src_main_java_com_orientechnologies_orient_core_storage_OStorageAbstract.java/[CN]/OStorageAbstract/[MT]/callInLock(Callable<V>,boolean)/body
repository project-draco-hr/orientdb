{
  if (iExclusiveLock)   lock.acquireExclusiveLock();
 else   lock.acquireSharedLock();
  try {
    return iCallable.call();
  }
 catch (  Exception e) {
    throw new OException("Error on nested call in lock",e);
  }
 finally {
    if (iExclusiveLock)     lock.releaseExclusiveLock();
 else     lock.releaseSharedLock();
  }
}
