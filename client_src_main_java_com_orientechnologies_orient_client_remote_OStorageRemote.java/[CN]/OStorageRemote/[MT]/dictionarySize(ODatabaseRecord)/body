{
  checkConnection();
  do {
    try {
      final OChannelBinaryClient network=beginRequest(OChannelBinaryProtocol.REQUEST_INDEX_SIZE);
      endRequest(network);
      try {
        beginResponse(network);
        return network.readInt();
      }
  finally {
        endResponse(network);
      }
    }
 catch (    Exception e) {
      handleException("Error on getting size of database's dictionary",e);
    }
  }
 while (true);
}
