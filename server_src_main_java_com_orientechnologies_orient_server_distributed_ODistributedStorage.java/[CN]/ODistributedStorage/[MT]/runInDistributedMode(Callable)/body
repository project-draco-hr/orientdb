{
  final RUN_MODE currentRunningMode=OScenarioThreadLocal.INSTANCE.get();
  if (currentRunningMode != RUN_MODE.RUNNING_DISTRIBUTED)   OScenarioThreadLocal.INSTANCE.set(RUN_MODE.RUNNING_DISTRIBUTED);
  try {
    return iCall.call();
  }
  finally {
    if (currentRunningMode != RUN_MODE.RUNNING_DISTRIBUTED)     OScenarioThreadLocal.INSTANCE.set(RUN_MODE.DEFAULT);
  }
}
