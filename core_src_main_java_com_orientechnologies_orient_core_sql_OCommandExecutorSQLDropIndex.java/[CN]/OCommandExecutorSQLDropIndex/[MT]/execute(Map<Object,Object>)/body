{
  if (field == null)   throw new OCommandExecutionException("Can't execute the command because it hasn't been parsed yet");
  final OClass cls=database.getMetadata().getSchema().getClass(sourceClassName);
  if (cls == null)   throw new OCommandExecutionException("Class '" + sourceClassName + "' not found");
  final OProperty prop=cls.getProperty(field);
  if (prop == null)   throw new IllegalArgumentException("Property '" + field + "' was not found in class '"+ cls+ "'");
  if (prop.getIndex() == null)   throw new IllegalArgumentException("Property '" + cls + "."+ field+ "' has not index");
  final long indexedItems=prop.getIndex().getUnderlying().size();
  prop.removeIndex();
  return indexedItems;
}
