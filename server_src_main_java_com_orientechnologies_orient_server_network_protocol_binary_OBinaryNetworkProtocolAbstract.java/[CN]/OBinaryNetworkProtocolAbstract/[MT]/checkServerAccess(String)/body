{
  if (serverUser == null)   throw new OSecurityAccessException("Server user not authenticated.");
  if (!OServerMain.server().authenticate(serverUser.name,null,iResource))   throw new OSecurityAccessException("User '" + serverUser.name + "' cannot access to the resource ["+ iResource+ "]. Use another server user or change permission in the file config/orientdb-server-config.xml");
}
