{
  if (manager.itsMe(nodeId))   throw new IllegalArgumentException("Cannot create a remote node with the id of the current server: " + nodeId);
synchronized (this) {
    ODistributedNode dNode=nodes.get(nodeId);
    if (dNode == null) {
      dNode=new ODistributedNode(this,nodeId);
      nodes.put(nodeId,dNode);
    }
    return dNode;
  }
}
