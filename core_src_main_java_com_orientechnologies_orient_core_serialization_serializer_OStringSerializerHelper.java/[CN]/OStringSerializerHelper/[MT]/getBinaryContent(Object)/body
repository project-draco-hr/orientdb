{
  if (iValue == null)   return null;
 else   if (iValue instanceof byte[])   return (byte[])iValue;
 else   if (iValue instanceof String) {
    String s=(String)iValue;
    if (s.length() > 1 && (s.charAt(0) == '^' && s.charAt(s.length() - 1) == '^'))     s=s.substring(1,s.length() - 1);
    return OBase64Utils.decode(s);
  }
 else   throw new IllegalArgumentException("Can't parse binary as type the value (class=" + iValue.getClass().getName() + "): "+ iValue);
}
