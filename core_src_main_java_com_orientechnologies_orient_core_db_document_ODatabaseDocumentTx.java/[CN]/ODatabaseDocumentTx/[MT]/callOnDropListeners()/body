{
  for (Iterator<ODatabaseLifecycleListener> it=Orient.instance().getDbLifecycleListeners(); it.hasNext(); )   it.next().onDrop(getDatabaseOwner());
  for (  ODatabaseListener listener : getListenersCopy())   try {
    listener.onDelete(getDatabaseOwner());
  }
 catch (  Throwable t) {
    t.printStackTrace();
  }
}
