{
  if (iEdgeTypeName != null) {
    final OClass cls=getMetadata().getSchema().getClass(iEdgeTypeName);
    if (cls == null)     throw new IllegalArgumentException("The class '" + iEdgeTypeName + "' was not found");
    if (!cls.isSubClassOf(edgeBaseClass))     throw new IllegalArgumentException("The class '" + iEdgeTypeName + "' doesn't extend the edge type");
  }
}
