{
  this.factory=factory;
  if (pageSize <= 0)   throw new ODirectMemoryViolationException("Size of allocated area should be more than zero but " + pageSize + " was provided.");
  this.safeMode=safeMode;
  this.directMemory=directMemory;
  this.dataPointer=directMemory.allocate(pageSize);
  this.pageSize=pageSize;
  final StackTraceElement[] ste=Thread.currentThread().getStackTrace();
  allocationStackTraceElements=Arrays.copyOfRange(ste,1,ste.length);
}
