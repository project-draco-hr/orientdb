{
  lockMgr.acquireLock(Thread.currentThread(),this,LOCK.EXCLUSIVE);
  try {
    countReentrantWrite++;
    if (verbose)     System.out.println("ResourceReantrance locked by " + Thread.currentThread());
    if (countReentrantWrite != 1)     throw new AssertionError("countReentrantWrite:" + countReentrantWrite);
  }
  finally {
    countReentrantWrite--;
    lockMgr.releaseLock(Thread.currentThread(),this,LOCK.EXCLUSIVE);
  }
}
