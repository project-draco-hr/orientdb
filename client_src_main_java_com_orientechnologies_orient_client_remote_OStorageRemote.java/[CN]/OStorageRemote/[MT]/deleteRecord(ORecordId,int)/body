{
  checkConnection();
  do {
    try {
      try {
        beginRequest(OChannelBinaryProtocol.REQUEST_RECORD_DELETE);
        network.writeRID(iRid);
        network.writeInt(iVersion);
      }
  finally {
        endRequest();
      }
      try {
        beginResponse();
        return network.readByte() == 1;
      }
  finally {
        endResponse();
      }
    }
 catch (    Exception e) {
      handleException("Error on delete record #" + iRid,e);
    }
  }
 while (true);
}
