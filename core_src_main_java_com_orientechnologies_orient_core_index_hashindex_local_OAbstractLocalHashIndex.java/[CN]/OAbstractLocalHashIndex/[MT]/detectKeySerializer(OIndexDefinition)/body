{
  if (indexDefinition != null) {
    if (indexDefinition instanceof ORuntimeKeyIndexDefinition)     return ((ORuntimeKeyIndexDefinition)indexDefinition).getSerializer();
 else {
      if (indexDefinition.getTypes().length > 1)       return OCompositeKeySerializer.INSTANCE;
 else       return OBinarySerializerFactory.INSTANCE.getObjectSerializer(indexDefinition.getTypes()[0]);
    }
  }
 else   return new OSimpleKeySerializer();
}
