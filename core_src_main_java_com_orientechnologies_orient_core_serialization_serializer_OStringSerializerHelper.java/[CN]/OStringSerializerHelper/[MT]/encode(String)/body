{
  int pos=-1;
  for (int i=0; i < iText.length(); ++i)   if (iText.charAt(i) == '"' || iText.charAt(i) == '\\' || iText.charAt(i) == '\'') {
    pos=i;
    break;
  }
  if (pos == -1)   return iText;
  final StringBuilder buffer=new StringBuilder(iText);
  char c;
  for (int i=pos; i < buffer.length(); ++i) {
    c=buffer.charAt(i);
    if (c == '"' || c == '\\' || c == '\'') {
      buffer.insert(i,'\\');
      ++i;
    }
  }
  return buffer.toString();
}
