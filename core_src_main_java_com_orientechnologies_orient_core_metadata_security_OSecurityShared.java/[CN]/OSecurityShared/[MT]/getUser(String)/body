{
  if (cachedUsers != null) {
    final OUser user=cachedUsers.get(iUserName);
    if (user != null)     return user;
  }
  acquireExclusiveLock();
  try {
    final List<ODocument> result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from OUser where name = '" + iUserName + "' limit 1").setFetchPlan("roles:1")).execute();
    if (result != null && !result.isEmpty())     return cacheUser(new OUser(result.get(0)));
    return null;
  }
  finally {
    releaseExclusiveLock();
  }
}
