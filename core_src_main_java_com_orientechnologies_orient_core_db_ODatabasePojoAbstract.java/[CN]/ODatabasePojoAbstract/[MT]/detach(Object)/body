{
  checkOpeness();
  for (  Field field : iPojo.getClass().getDeclaredFields()) {
    final Object value=OObjectSerializerHelper.getFieldValue(iPojo,field.getName());
    if (value instanceof OLazyObjectList<?>)     ((OLazyObjectList)value).detach();
 else     if (value instanceof OLazyObjectSet<?>)     ((OLazyObjectSet)value).detach();
 else     if (value instanceof OLazyObjectMap<?>)     ((OLazyObjectMap)value).detach();
  }
  return iPojo;
}
