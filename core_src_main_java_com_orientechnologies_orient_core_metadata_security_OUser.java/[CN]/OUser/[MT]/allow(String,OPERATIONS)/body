{
  if (roles == null || roles.isEmpty())   throw new OSecurityAccessException("User '" + name + "' has no role defined");
  for (  ORole r : roles) {
    if (r.allow(iResource,iOperation))     return r;
  }
  throw new OSecurityAccessException("User '" + name + "' has no the permission to execute the operation '"+ iOperation+ "' against the resource: "+ iResource);
}
