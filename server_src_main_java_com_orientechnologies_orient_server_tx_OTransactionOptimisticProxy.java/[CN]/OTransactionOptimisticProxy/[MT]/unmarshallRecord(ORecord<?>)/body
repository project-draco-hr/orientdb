{
  if (iRecord instanceof ODocument) {
    ((ODocument)iRecord).deserializeFields();
    for (    Entry<String,Object> field : ((ODocument)iRecord)) {
      if (field.getValue() instanceof ORecordLazyList)       ((ORecordLazyList)field.getValue()).lazyLoad(true);
 else       if (field.getValue() instanceof ORecordLazySet)       ((ORecordLazySet)field.getValue()).lazyLoad(true);
    }
  }
}
