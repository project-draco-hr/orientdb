{
  if (database != null && !(database.getStorage() instanceof ODistributedStorage))   throw new ODistributedException("Distributed storage was not installed for database '" + database.getName() + "'. Implementation found: "+ database.getStorage().getClass().getName());
  final ORemoteTask task=req.getTask();
  try {
    final Serializable result=(Serializable)task.execute(req.getId(),serverInstance,this,database);
    if (result instanceof Throwable && !(result instanceof OException))     ODistributedServerLog.error(this,nodeName,getNodeNameById(req.getId().getNodeId()),DIRECTION.IN,"error on executing request %d (%s) on local node: ",(Throwable)result,req.getId(),req.getTask());
    return result;
  }
 catch (  Throwable e) {
    if (!(e instanceof OException))     ODistributedServerLog.error(this,nodeName,getNodeNameById(req.getId().getNodeId()),DIRECTION.IN,"error on executing distributed request %s on local node: %s",e,req.getId(),req.getTask());
    return e;
  }
}
