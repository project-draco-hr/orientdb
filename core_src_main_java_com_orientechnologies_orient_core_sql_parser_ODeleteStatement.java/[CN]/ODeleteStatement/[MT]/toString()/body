{
  StringBuilder result=new StringBuilder();
  result.append("DELETE FROM ");
  result.append(fromClause.toString());
  if (whereClause != null) {
    result.append(" WHERE ");
    result.append(whereClause.toString());
  }
  if (returnBefore) {
    result.append(" RETURN BEFORE");
  }
  if (limit != null) {
    result.append(" LIMIT ");
    result.append(limit);
  }
  if (unsafe) {
    result.append(" UNSAFE");
  }
  return result.toString();
}
