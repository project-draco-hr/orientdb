{
  checkConnection();
  do {
    try {
      final OChannelBinaryClient network=beginRequest(OChannelBinaryProtocol.REQUEST_DB_COUNTRECORDS);
      endRequest(network);
      try {
        beginResponse(network);
        return network.readLong();
      }
  finally {
        endResponse(network);
      }
    }
 catch (    Exception e) {
      handleException("Error on read database record count",e);
    }
  }
 while (true);
}
