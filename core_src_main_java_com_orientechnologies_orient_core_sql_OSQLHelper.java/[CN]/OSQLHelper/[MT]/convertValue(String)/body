{
  if (iValue == null)   return null;
  Object fieldValue=null;
  if (iValue.startsWith("'") && iValue.endsWith("'"))   fieldValue=iValue.substring(1,iValue.length() - 1);
 else   if (iValue.indexOf(":") > -1)   fieldValue=new ORecordId(iValue);
 else {
    String upperCase=iValue.toUpperCase();
    if (upperCase.equals("NULL"))     fieldValue=null;
    if (upperCase.equals("TRUE"))     fieldValue=Boolean.TRUE;
 else     if (upperCase.equals("FALSE"))     fieldValue=Boolean.FALSE;
 else     if (iValue.contains("."))     fieldValue=new Float(iValue);
 else     fieldValue=new Integer(iValue);
  }
  return fieldValue;
}
