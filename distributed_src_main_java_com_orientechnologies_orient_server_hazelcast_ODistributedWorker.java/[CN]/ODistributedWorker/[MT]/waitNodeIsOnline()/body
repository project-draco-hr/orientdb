{
  final ODistributedServerManager mgr=manager.getServerInstance().getDistributedManager();
  if (mgr != null && mgr.isEnabled() && mgr.isOffline()) {
    for (int retry=0; running; ++retry) {
      if (mgr != null && mgr.isOffline()) {
        OLogManager.instance().info(this,"Node is not online yet (status=%s), blocking the command until it is online (retry=%d, queue=%d)",mgr.getNodeStatus(),retry + 1,localQueue.size());
        try {
          Thread.sleep(3000);
        }
 catch (        InterruptedException e) {
        }
      }
 else       return;
    }
  }
}
