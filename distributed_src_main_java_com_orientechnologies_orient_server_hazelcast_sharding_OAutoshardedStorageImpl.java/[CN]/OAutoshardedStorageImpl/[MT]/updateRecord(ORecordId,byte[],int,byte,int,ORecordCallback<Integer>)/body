{
  if (undistributedClusters.contains(iRecordId.getClusterId())) {
    return wrapped.updateRecord(iRecordId,iContent,iVersion,iRecordType,iMode,iCallback);
  }
  final ODHTNode node=serverInstance.findSuccessor(iRecordId.clusterPosition.longValue());
  if (node.isLocal())   return wrapped.updateRecord(iRecordId,iContent,iVersion,iRecordType,iMode,iCallback);
 else   return new OStorageOperationResult<Integer>(node.updateRecord(wrapped.getName(),iRecordId,iContent,iVersion,iRecordType),true);
}
