{
  treeDataProvider=iTreeDataProvider;
  parentRid=new ORecordId();
  leftRid=new ORecordId();
  rightRid=new ORecordId();
  record=new ORecordBytesLazy(this);
  if (iRID != null) {
    record.setIdentity(iRID.getClusterId(),iRID.getClusterPosition());
    if (treeDataProvider.storage == null)     load(OMVRBTreeProviderAbstract.getDatabase());
 else     load(treeDataProvider.storage);
  }
 else   record.setIdentity(new ORecordId());
  if (record.getIdentity().isNew() || record.getIdentity().isTemporary())   record.addListener(this);
}
