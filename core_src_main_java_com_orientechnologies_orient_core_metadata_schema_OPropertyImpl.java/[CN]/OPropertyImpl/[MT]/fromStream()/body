{
  name=document.field("name");
  if (document.field("type") != null)   type=OType.getById(((Integer)document.field("type")).byteValue());
  mandatory=(Boolean)document.field("mandatory");
  notNull=(Boolean)document.field("notNull");
  min=document.field("min");
  max=document.field("max");
  regexp=document.field("regexp");
  linkedClassName=(String)document.field("linkedClass");
  if (document.field("linkedType") != null)   linkedType=OType.getById(((Integer)document.field("linkedType")).byteValue());
  if (document.field("index") != null) {
    if (document.field("index-type") == null) {
      final OIndex underlyingIndex=document.getDatabase().getMetadata().getIndexManager().getIndex((ORecordId)document.field("index",ORID.class));
      if (underlyingIndex != null)       index=new OPropertyIndex(underlyingIndex,new String[]{name});
 else       document.removeField("index");
    }
  }
}
