{
  if (iValue != null && iCopy != null && iCopy) {
    if (iValue instanceof ODocument)     return ((ODocument)iValue).copy();
 else     if (iValue instanceof List)     return new ArrayList<Object>((Collection<Object>)iValue);
 else     if (iValue instanceof Set)     return new HashSet<Object>((Collection<Object>)iValue);
 else     if (iValue instanceof Map)     return new LinkedHashMap<Object,Object>((Map<Object,Object>)iValue);
 else     throw new OProcessException("Copy of value '" + iValue + "' of class '"+ iValue.getClass()+ "' is not supported");
  }
  return iValue;
}
