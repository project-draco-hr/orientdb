{
  if (runningTask != null)   return;
  runningTask=new TimerTask(){
    @Override public void run(){
      try {
        if (running && !manager.isLeader())         manager.becameLeader();
      }
 catch (      Exception e) {
      }
    }
  }
;
  Orient.getTimer().schedule(runningTask,manager.getConfig().networkTimeoutLeader);
}
