{
  if (!database.getURL().startsWith("remote:"))   return;
  database.open("admin","admin");
  ((OStorageRemoteThread)database.getStorage()).setRemoteServerEventListener(new ORemoteServerEventListener(){
    @Override public void onRequest(    byte iRequestCode,    Object iObject){
switch (iRequestCode) {
case OChannelBinaryProtocol.REQUEST_PUSH_RECORD:
        onRecordPulled++;
      break;
  }
}
}
);
database.close();
}
