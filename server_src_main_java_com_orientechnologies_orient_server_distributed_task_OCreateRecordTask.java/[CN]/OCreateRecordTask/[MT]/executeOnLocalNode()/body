{
  ODistributedServerLog.debug(this,getDistributedServerManager().getLocalNodeId(),getNodeSource(),DIRECTION.IN,"creating record %s/%s v.%s oper=%d.%d...",databaseName,rid.toString(),version.toString(),runId,operationSerial);
  final ORecordInternal<?> record=Orient.instance().getRecordFactoryManager().newInstance(recordType);
  final ODatabaseDocumentTx database=openDatabase();
  try {
    record.fill(rid,version,content,true);
    if (rid.getClusterId() != -1)     record.save(database.getClusterNameById(rid.getClusterId()),true);
 else     record.save();
    rid=(ORecordId)record.getIdentity();
    ODistributedServerLog.debug(this,getDistributedServerManager().getLocalNodeId(),getNodeSource(),DIRECTION.IN,"assigned new rid %s/%s v.%s oper=%d.%d",databaseName,rid.toString(),version.toString(),runId,operationSerial);
    return new OPhysicalPosition(rid.getClusterPosition(),record.getRecordVersion());
  }
  finally {
    closeDatabase(database);
  }
}
