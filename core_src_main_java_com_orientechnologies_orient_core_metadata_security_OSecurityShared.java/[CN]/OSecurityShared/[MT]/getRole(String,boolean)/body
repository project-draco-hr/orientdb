{
  List<ODocument> result;
  try {
    result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from ORole where name = '" + roleName + "' limit 1")).execute();
    if (roleName.equalsIgnoreCase("admin") && result.isEmpty()) {
      if (allowRepair)       repair();
      result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from ORole where name = '" + roleName + "' limit 1")).execute();
    }
  }
 catch (  Exception e) {
    if (allowRepair)     repair();
    result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from ORole where name = '" + roleName + "' limit 1").setFetchPlan("roles:1")).execute();
  }
  if (result != null && !result.isEmpty())   return new ORole(result.get(0));
  return null;
}
