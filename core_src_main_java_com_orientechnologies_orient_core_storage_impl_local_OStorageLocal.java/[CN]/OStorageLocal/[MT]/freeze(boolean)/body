{
  modificationLock.prohibitModifications(throwException);
  synch();
  try {
    for (    OCluster cluster : clusters)     if (cluster != null)     cluster.setSoftlyClosed(true);
    for (    ODataLocal data : dataSegments)     if (data != null)     data.setSoftlyClosed(true);
    if (configuration != null)     configuration.setSoftlyClosed(true);
  }
 catch (  IOException e) {
    throw new OStorageException("Error on freeze storage '" + name + "'",e);
  }
}
