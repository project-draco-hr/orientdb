{
  out.println("--------------------------------------------------");
  out.printf("Class: %s   id: %s   v.%d\n",currentRecord.getClassName(),currentRecord.getIdentity().toString(),currentRecord.getVersion());
  out.println("--------------------------------------------------");
  for (  String fieldName : currentRecord.fields()) {
    out.printf("%20s : %-20s\n",fieldName,currentRecord.field(fieldName));
  }
  out.println("--------------------------------------------------");
}
