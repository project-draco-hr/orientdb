{
  final Throwable t;
  if (e instanceof ExecutionException) {
    if (e.getCause() instanceof ONeedRetryException) {
      ODistributedServerLog.debug(iContext,task.getDistributedServerManager().getLocalNodeId(),nodeId,DIRECTION.OUT,"error on execution %d.%d of operation in %s mode raising a ONeedRetryException",task.getRunId(),task.getOperationSerial(),mode);
      t=e.getCause();
    }
 else {
      ODistributedServerLog.error(iContext,task.getDistributedServerManager().getLocalNodeId(),nodeId,DIRECTION.OUT,"error on execution of operation %d.%d in %s mode",e,task.getRunId(),task.getOperationSerial(),mode);
      t=new ODistributedException("Error on executing remote operation " + task.getRunId() + "."+ task.getOperationSerial()+ " in "+ mode+ " mode against node: "+ nodeId,e);
    }
  }
 else   if (e instanceof ONeedRetryException) {
    ODistributedServerLog.debug(iContext,task.getDistributedServerManager().getLocalNodeId(),nodeId,DIRECTION.OUT,"error on execution %d.%d of operation in %s mode raising a ONeedRetryException",task.getRunId(),task.getOperationSerial(),mode);
    t=e;
  }
 else   t=e;
  results.put(nodeId,t);
}
