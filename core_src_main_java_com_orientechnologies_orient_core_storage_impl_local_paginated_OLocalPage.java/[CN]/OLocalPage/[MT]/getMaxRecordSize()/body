{
  int freeListHeader=OIntegerSerializer.INSTANCE.deserializeFromDirectMemory(directMemory,pagePointer + FREELIST_HEADER_OFFSET);
  int maxEntrySize;
  if (freeListHeader > 0)   maxEntrySize=getFreeSpace();
 else   maxEntrySize=getFreeSpace() - INDEX_ITEM_SIZE;
  return maxEntrySize - 2 * OIntegerSerializer.INT_SIZE;
}
