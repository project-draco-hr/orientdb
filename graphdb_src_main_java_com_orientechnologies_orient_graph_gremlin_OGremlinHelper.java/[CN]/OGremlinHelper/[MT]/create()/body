{
  if (graphPool != null)   return;
  graphPool=new OReentrantResourcePool<ODatabaseDocumentTx,OrientBaseGraph>(maxPool,new OResourcePoolListener<ODatabaseDocumentTx,OrientBaseGraph>(){
    @Override public OrientGraph createNewResource(    final ODatabaseDocumentTx iKey,    final Object... iAdditionalArgs){
      return new OrientGraph(iKey);
    }
    @Override public boolean reuseResource(    final ODatabaseDocumentTx iKey,    final Object[] iAdditionalArgs,    final OrientBaseGraph iReusedGraph){
      iReusedGraph.reuse(iKey);
      return true;
    }
  }
);
}
