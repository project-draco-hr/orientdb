{
  if (iSize > BYTEBUFFER_POOLABLE_SIZE)   return ByteBuffer.allocate(iSize);
  final ByteBuffer buffer;
synchronized (this) {
    if (bufferPool.isEmpty())     buffer=ByteBuffer.allocate(BYTEBUFFER_POOLABLE_SIZE);
 else     buffer=bufferPool.remove(0);
  }
  buffer.limit(iSize);
  return buffer;
}
