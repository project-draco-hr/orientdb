{
  final Pointer ptr=new Pointer(pointer);
  if (unaligned)   return ptr.getInt(0);
  if (alignedOrder.equals(ByteOrder.BIG_ENDIAN))   return (0xFF & ptr.getByte(0)) << 24 | (0xFF & ptr.getByte(1)) << 16 | (0xFF & ptr.getByte(2)) << 8 | (0xFF & ptr.getByte(3));
  return (0xFF & ptr.getByte(0)) | (0xFF & ptr.getByte(1)) << 8 | (0xFF & ptr.getByte(2)) << 16 | (0xFF & ptr.getByte(3)) << 24;
}
