{
  pos=0;
  total=channel.in.readInt();
  System.out.println("Fetching " + total + " bytes...");
  if (total > buffer.length)   throw new ONetworkProtocolException("Bad chunk size received: " + total + " when the maximum can be: "+ buffer.length);
  channel.in.readFully(buffer,0,total);
  again=channel.in.readByte() == 1;
}
