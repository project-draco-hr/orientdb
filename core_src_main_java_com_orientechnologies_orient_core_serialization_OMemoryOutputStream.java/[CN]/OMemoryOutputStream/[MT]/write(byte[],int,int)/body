{
  final int pos=position;
  final int capacity=pos + iLength;
  assureSpaceFor(iLength);
  byte[] mbuf=buffer;
  if (iLength < NATIVE_COPY_THRESHOLD)   for (int i=0; i < iLength; ++i)   mbuf[pos + i]=iBuffer[iOffset + i];
 else   System.arraycopy(iBuffer,iOffset,mbuf,pos,iLength);
  position=capacity;
}
