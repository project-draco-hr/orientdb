{
  try {
    doc=database.load(docRid,"invalid");
    Assert.fail("Should throw IllegalArgumentException");
  }
 catch (  Exception e) {
  }
  database.getLevel1Cache().invalidate();
  try {
    doc=database.load(docRid,"invalid");
    Assert.fail("Should throw IllegalArgumentException");
  }
 catch (  Exception e) {
  }
  database.getLevel2Cache().clear();
  try {
    doc=database.load(docRid,"invalid");
    Assert.fail("Should throw IllegalArgumentException");
  }
 catch (  Exception e) {
  }
  return doc;
}
