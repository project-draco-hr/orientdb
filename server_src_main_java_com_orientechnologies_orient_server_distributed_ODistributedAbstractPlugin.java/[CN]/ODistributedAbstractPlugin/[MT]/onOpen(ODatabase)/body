{
  final ODocument cfg=getLocalDatabaseConfiguration(iDatabase.getName());
  if ((Boolean)cfg.field("replication")) {
    createReplicator(iDatabase.getName());
    if (iDatabase instanceof ODatabaseComplex<?>)     ((ODatabaseComplex<?>)iDatabase).registerHook(this);
    Object defCluster=cfg.field("defaultCluster");
    if (defCluster != null)     iDatabase.set(ATTRIBUTES.DEFAULTCLUSTERID,defCluster);
  }
}
