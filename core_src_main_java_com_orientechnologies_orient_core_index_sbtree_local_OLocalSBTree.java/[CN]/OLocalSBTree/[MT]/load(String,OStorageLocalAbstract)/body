{
  acquireExclusiveLock();
  try {
    this.storage=storageLocal;
    diskCache=storage.getDiskCache();
    this.name=name;
    fileId=diskCache.openFile(name + dataFileExtension);
    OCachePointer rootPointer=diskCache.load(fileId,ROOT_INDEX);
    try {
      OSBTreeBucket<K> rootBucket=new OSBTreeBucket<K>(rootPointer.getDataPointer(),true,keySerializer,com.orientechnologies.orient.core.storage.impl.local.paginated.OAbstractPLocalPage.TrackMode.BOTH);
      keySerializer=(OBinarySerializer<K>)OBinarySerializerFactory.INSTANCE.getObjectSerializer(rootBucket.getKeySerializerId());
      keySize=rootBucket.getKeySize();
    }
  finally {
      diskCache.release(fileId,ROOT_INDEX);
    }
  }
 catch (  IOException e) {
    throw new OIndexException("Exception during loading of sbtree " + name,e);
  }
 finally {
    releaseExclusiveLock();
  }
}
