{
  if (iValue instanceof OSQLDefinitionItem) {
    if (iRecord.getStatus() == STATUS.NOT_LOADED)     iRecord.load();
    return ((OSQLDefinitionItem)iValue).getValue(iRecord);
  }
  if (iValue instanceof OSQLDefinitionCondition)   return ((OSQLDefinitionCondition)iValue).evaluate(iRecord);
  return iValue;
}
