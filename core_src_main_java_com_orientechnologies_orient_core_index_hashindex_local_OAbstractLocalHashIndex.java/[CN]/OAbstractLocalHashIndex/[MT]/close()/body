{
  acquireExclusiveLock();
  try {
    flushSplitBucketsBuffer();
    if (metadataStore.getFile().isOpen()) {
      metadataStore.close();
    }
    if (treeStateStore.getFile().isOpen()) {
      treeStateStore.close();
    }
    for (int i=0; i < filesMetadata.length; i++)     if (filesMetadata[i] != null)     buffer.closeFile(name + i,BUCKET_FILE_EXTENSION);
  }
 catch (  InterruptedException e) {
    throw new OIndexException("Error during index close",e);
  }
catch (  IOException e) {
    throw new OIndexException("Error during index close",e);
  }
 finally {
    releaseExclusiveLock();
  }
}
