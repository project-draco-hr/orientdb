{
  if (checkGuestAccess())   return true;
  if (iAskForAuthentication)   if (iRequest.authorization == null || SESSIONID_LOGOUT.equals(iRequest.sessionId)) {
    sendAuthorizationRequest(iRequest);
    return false;
  }
  if (iRequest.authorization != null) {
    final String[] authParts=iRequest.authorization.split(":");
    if (authParts.length == 2 && OServerMain.server().authenticate(authParts[0],authParts[1],resource))     return true;
  }
  sendNotAuthorizedResponse(iRequest);
  return false;
}
