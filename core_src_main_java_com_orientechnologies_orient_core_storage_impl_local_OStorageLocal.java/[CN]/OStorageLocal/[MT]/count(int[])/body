{
  checkOpeness();
  lock.acquireSharedLock();
  try {
    long tot=0;
    for (int i=0; i < iClusterIds.length; ++i) {
      if (iClusterIds[i] >= clusters.length)       throw new OConfigurationException("Cluster id " + iClusterIds[i] + " was not found in database '"+ name+ "'");
      if (iClusterIds[i] > -1) {
        final OCluster c=clusters[iClusterIds[i]];
        if (c != null)         tot+=c.getEntries();
      }
    }
    return tot;
  }
  finally {
    lock.releaseSharedLock();
  }
}
