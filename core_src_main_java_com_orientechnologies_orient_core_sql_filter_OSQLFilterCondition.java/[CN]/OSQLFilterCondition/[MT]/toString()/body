{
  StringBuilder buffer=new StringBuilder(128);
  buffer.append('(');
  buffer.append(left);
  if (operator != null) {
    buffer.append(' ');
    buffer.append(operator);
    buffer.append(' ');
    if (right instanceof String)     buffer.append('\'');
    buffer.append(right);
    if (right instanceof String)     buffer.append('\'');
    buffer.append(')');
  }
  return buffer.toString();
}
