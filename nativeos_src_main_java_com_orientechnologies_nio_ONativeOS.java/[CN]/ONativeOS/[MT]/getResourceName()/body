{
  String prefix;
  if (Platform.isWindows())   prefix="win32-" + (Platform.is64Bit() ? "amd64" : "x86");
 else   if (Platform.isLinux())   prefix="linux-" + (Platform.is64Bit() ? "amd64" : "i386");
 else   return null;
  return "/com/orientechnologies/nio/" + prefix + "/"+ System.mapLibraryName(LIBRARY_NAME);
}
