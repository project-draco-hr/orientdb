{
  if (recordingFrom == -1)   return;
  acquireExclusiveLock();
  try {
    OLogManager.instance().config(this,"Profiler has stopped recording metrics");
    lastSnapshot=null;
    realTime.clear();
    dictionary.clear();
    types.clear();
    if (archiverTask != null)     archiverTask.cancel();
    recordingFrom=-1;
  }
  finally {
    releaseExclusiveLock();
  }
}
