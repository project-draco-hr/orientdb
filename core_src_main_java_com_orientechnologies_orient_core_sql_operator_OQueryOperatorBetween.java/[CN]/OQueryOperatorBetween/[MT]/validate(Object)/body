{
  if (!OMultiValue.isMultiValue(iRight.getClass())) {
    throw new IllegalArgumentException("Found '" + iRight + "' while was expected: "+ getSyntax());
  }
  if (OMultiValue.getSize(iRight) != 3)   throw new IllegalArgumentException("Found '" + OMultiValue.toString(iRight) + "' while was expected: "+ getSyntax());
}
