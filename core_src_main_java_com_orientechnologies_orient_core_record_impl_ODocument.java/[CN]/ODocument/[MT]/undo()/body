{
  if (!_trackingChanges)   throw new OConfigurationException("Cannot undo the document because tracking of changes is disabled");
  for (  Entry<String,Object> entry : _fieldOriginalValues.entrySet()) {
    final Object value=entry.getValue();
    if (value == null)     _fieldValues.remove(entry.getKey());
 else     _fieldValues.put(entry.getKey(),entry.getValue());
  }
  return this;
}
