{
  if (graph == null)   graph=pipeline.getGraphDatabase();
  if (graph == null)   throw new OETLProcessHaltedException("Graph instance not found. Assure you have configured it in the Loader");
  vertexClass=(String)resolve(vertexClass);
  if (vertexClass != null) {
    final OClass cls=graph.getVertexType(vertexClass);
    if (cls == null)     try {
      graph.createVertexType(vertexClass);
    }
 catch (    OSchemaException e) {
    }
  }
  final OrientVertex v=graph.getVertex(input);
  if (v == null)   return null;
  if (vertexClass != null)   v.setProperty("@class",vertexClass);
  return v;
}
