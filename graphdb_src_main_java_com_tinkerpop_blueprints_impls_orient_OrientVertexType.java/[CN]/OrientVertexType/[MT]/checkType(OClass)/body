{
  if (iType == null)   throw new IllegalArgumentException("Vertex class is null");
  if (((iType instanceof OImmutableClass) && !((OImmutableClass)iType).isVertexType()) || !iType.isSubClassOf(CLASS_NAME))   throw new IllegalArgumentException("Type error. The class '" + iType + "' does not extend class '"+ CLASS_NAME+ "' and therefore cannot be considered a Vertex");
}
