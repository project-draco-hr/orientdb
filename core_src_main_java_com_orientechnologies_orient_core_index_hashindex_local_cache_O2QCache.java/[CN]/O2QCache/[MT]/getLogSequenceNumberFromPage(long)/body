{
  final int segment=OIntegerSerializer.INSTANCE.deserializeFromDirectMemory(directMemory,dataPointer + OLongSerializer.LONG_SIZE + OIntegerSerializer.INT_SIZE);
  final long position=OLongSerializer.INSTANCE.deserializeFromDirectMemory(directMemory,dataPointer + OLongSerializer.LONG_SIZE + 2 * OIntegerSerializer.INT_SIZE);
  return new OLogSequenceNumber(segment,position);
}
