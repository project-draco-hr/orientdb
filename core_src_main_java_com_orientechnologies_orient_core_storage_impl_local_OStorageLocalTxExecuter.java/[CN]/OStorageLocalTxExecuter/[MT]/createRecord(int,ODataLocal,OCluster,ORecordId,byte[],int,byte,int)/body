{
  iRid.clusterPosition=-1;
  try {
    final OPhysicalPosition ppos=storage.createRecord(iDataSegment,iClusterSegment,iContent,iRecordType,iRid,iRecordVersion);
    txSegment.addLog(OTxSegment.OPERATION_CREATE,iTxId,iRid.clusterId,iRid.clusterPosition,iRecordType,0,null,dataSegmentId);
    return ppos;
  }
 catch (  IOException e) {
    OLogManager.instance().error(this,"Error on creating entry in log segment: " + iClusterSegment,e,OTransactionException.class);
    return null;
  }
}
