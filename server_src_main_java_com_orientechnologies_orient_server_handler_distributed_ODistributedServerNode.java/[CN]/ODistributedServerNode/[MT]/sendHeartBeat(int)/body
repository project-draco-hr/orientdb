{
  configuration.setValue(OGlobalConfiguration.NETWORK_SOCKET_TIMEOUT,iNetworkTimeout);
  OLogManager.instance().debug(this,"Sending keepalive message to distributed server node %s:%d...",networkAddress,networkPort);
  channel.acquireExclusiveLock();
  try {
    channel.writeByte(OChannelDistributedProtocol.REQUEST_DISTRIBUTED_HEARTBEAT);
    channel.writeInt(clientTxId);
    channel.flush();
    readStatus();
    lastHeartBeat=System.currentTimeMillis();
    long remoteVersion=channel.readLong();
    OLogManager.instance().debug(this,"Checking database versions: local %d <-> remote %d",dbVersion,remoteVersion);
    if (remoteVersion != dbVersion)     throw new ODistributedException("Database version doesn't match between current node (" + dbVersion + ") and remote ("+ remoteVersion+ ")");
  }
 catch (  Exception e) {
    return false;
  }
 finally {
    channel.releaseExclusiveLock();
  }
  return true;
}
