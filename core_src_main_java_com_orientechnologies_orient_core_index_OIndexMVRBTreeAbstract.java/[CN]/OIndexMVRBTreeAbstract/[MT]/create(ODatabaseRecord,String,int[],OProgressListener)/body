{
  configuration=new ODocument(iDatabase);
  if (iClusterIdsToIndex != null)   for (  int id : iClusterIdsToIndex)   clustersToIndex.add(iDatabase.getClusterNameById(id));
  map=new OMVRBTreeDatabaseLazySave<String,List<ORecord<?>>>(iDatabase,iClusterIndexName,OStreamSerializerString.INSTANCE,OStreamSerializerListRID.INSTANCE);
  rebuild(iProgressListener);
  return this;
}
