{
  if (checkDeletedInTx())   graph.throwRecordNotFoundException("The graph element " + getIdentity() + " has been deleted");
  validateProperty(this,key,value);
  final OrientBaseGraph graph=getGraph();
  if (graph != null)   graph.autoStartTransaction();
  getRecord().field(key,value,iType);
  if (graph != null)   save();
}
