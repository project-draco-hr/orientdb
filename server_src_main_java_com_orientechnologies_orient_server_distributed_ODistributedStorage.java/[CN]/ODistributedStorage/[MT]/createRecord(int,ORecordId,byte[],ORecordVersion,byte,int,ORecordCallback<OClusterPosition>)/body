{
  if (ODistributedThreadLocal.INSTANCE.get() != null)   return wrapped.createRecord(iDataSegmentId,iRecordId,iContent,iRecordVersion,iRecordType,iMode,iCallback);
  Object result=null;
  try {
    result=dManager.manageExecution(getClusterNameFromRID(iRecordId),iRecordId,new OCreateRecordDistributedTask(serverInstance,serverInstance.getDistributedManager(),wrapped.getName(),createRecordMode,iRecordId,iContent,iRecordVersion,iRecordType));
    iRecordId.clusterPosition=((OPhysicalPosition)result).clusterPosition;
  }
 catch (  ExecutionException e) {
    handleDistributedException("Cannot route CREATE_RECORD operation against %s to the distributed node",e,iRecordId);
  }
  return new OStorageOperationResult<OPhysicalPosition>((OPhysicalPosition)result);
}
