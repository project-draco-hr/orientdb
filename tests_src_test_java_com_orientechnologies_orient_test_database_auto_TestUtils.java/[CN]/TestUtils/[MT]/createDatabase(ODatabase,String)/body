{
  if (iURL.startsWith(OEngineRemote.NAME)) {
    File file=new File("../releases/" + OConstants.ORIENT_VERSION + "/db/config/orientdb-server-config.xml");
    if (!file.exists())     file=new File("server/config/orientdb-server-config.xml");
    if (!file.exists())     file=new File("../server/config/orientdb-server-config.xml");
    if (!file.exists())     file=new File(OSystemVariableResolver.resolveSystemVariables("${ORIENTDB_HOME}/config/orientdb-server-config.xml"));
    if (!file.exists())     throw new OConfigurationException("Can't load file orientdb-server-config.xml to execute remote tests");
    FileReader f=new FileReader(file);
    final char[] buffer=new char[(int)file.length()];
    f.read(buffer);
    f.close();
    String fileContent=new String(buffer);
    int pos=fileContent.indexOf("password=\"");
    pos+="password=\"".length();
    String password=fileContent.substring(pos,fileContent.indexOf('"',pos));
    new OServerAdmin(iURL).connect("root",password).createDatabase("local").close();
  }
 else {
    database.create();
    database.close();
  }
}
