{
  if (maxSize > 0 && iSize > maxSize)   throw new IllegalArgumentException("Cannot extend the file to " + OFileUtils.getSizeAsString(iSize) + " because the max is "+ OFileUtils.getSizeAsString(maxSize));
  if (iSize != size) {
    checkSize(iSize);
    size=iSize;
    headerBuffer.putInt(SIZE_OFFSET,size);
    setHeaderDirty();
  }
}
