{
  super(iClusterNode.networkMulticastHeartbeat,OServer.getThreadGroup(),"DiscoverySignaler");
  String buffer=ODistributedServerDiscoveryManager.PACKET_HEADER + OConstants.ORIENT_VERSION + "|"+ ODistributedServerDiscoveryManager.PROTOCOL_VERSION+ "|"+ iClusterNode.name+ "|"+ iNetworkListener.getInboundAddr().getHostName()+ "|"+ iNetworkListener.getInboundAddr().getPort();
  discoveryPacket=OSecurityManager.instance().encrypt(iClusterNode.securityAlgorithm,iClusterNode.securityKey,buffer.getBytes());
  try {
    dgram=new DatagramPacket(discoveryPacket,discoveryPacket.length,iClusterNode.networkMulticastAddress,iClusterNode.networkMulticastPort);
    socket=new DatagramSocket();
    start();
  }
 catch (  Exception e) {
    OLogManager.instance().error(this,"Can't startup distributed server discovery signaler",e);
  }
}
