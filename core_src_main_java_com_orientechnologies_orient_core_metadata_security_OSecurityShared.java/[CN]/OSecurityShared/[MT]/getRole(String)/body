{
  lock.acquireSharedLock();
  try {
    final List<ODocument> result=getDatabase().<OCommandRequest>command(new OSQLSynchQuery<ODocument>("select from ORole where name = '" + iRoleName + "'").setFetchPlan("*:-1")).execute();
    if (result != null && result.size() > 0)     return new ORole(result.get(0));
    return null;
  }
  finally {
    lock.releaseSharedLock();
  }
}
