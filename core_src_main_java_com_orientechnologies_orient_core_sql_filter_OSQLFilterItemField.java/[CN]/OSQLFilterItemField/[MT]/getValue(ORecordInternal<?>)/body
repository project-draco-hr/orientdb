{
  if (iRecord == null)   throw new OCommandExecutionException("expression item '" + name + "' can't be resolved");
  final ODatabaseRecord db=iRecord.getDatabase();
  if (name.charAt(0) == '@')   return transformValue(db,getRecordAttribute(db,iRecord,name));
 else   return transformValue(db,((ODocument)iRecord).rawField(name));
}
