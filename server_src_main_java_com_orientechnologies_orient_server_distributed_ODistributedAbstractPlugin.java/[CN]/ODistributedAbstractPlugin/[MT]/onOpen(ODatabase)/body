{
  final ODocument cfg=getDatabaseConfiguration(iDatabase.getName());
  if (cfg == null)   return;
  final Boolean synch=(Boolean)cfg.field("synchronization");
  if (synch == null || synch) {
    final OStorageSynchronizer dbSynchronizer=getDatabaseSynchronizer(iDatabase.getName());
    if (iDatabase instanceof ODatabaseComplex<?>)     ((ODatabaseComplex<?>)iDatabase).replaceStorage(new ODistributedStorage(this,dbSynchronizer,(OStorageEmbedded)((ODatabaseComplex<?>)iDatabase).getStorage()));
  }
}
