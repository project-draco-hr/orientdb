{
  final Method m=callbacks.get(iPojo.getClass().getSimpleName() + "." + iAnnotation.getSimpleName());
  if (m != null)   try {
    if (m.getParameterTypes().length > 0)     m.invoke(iPojo,iDocument);
 else     m.invoke(iPojo);
  }
 catch (  Exception e) {
    throw new OConfigurationException("Error on executing user callback '" + m.getName() + "' annotated with '"+ iAnnotation.getSimpleName()+ "'",e);
  }
}
