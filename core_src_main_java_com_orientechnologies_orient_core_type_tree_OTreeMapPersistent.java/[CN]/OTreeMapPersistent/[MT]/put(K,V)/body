{
  final long timer=OProfiler.getInstance().startChrono();
  updateUsageCounter();
  lock.acquireExclusiveLock();
  try {
    final V v=internalPut(key,value);
    commitChanges(null);
    return v;
  }
  finally {
    lock.releaseExclusiveLock();
    OProfiler.getInstance().stopChrono("OTreeMapPersistent.put",timer);
  }
}
