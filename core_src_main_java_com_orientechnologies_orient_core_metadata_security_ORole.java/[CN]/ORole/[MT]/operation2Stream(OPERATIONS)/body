{
  byte mask;
switch (iOperation) {
case NONE:
    mask=STREAM_NONE;
  break;
case CREATE:
mask=STREAM_CREATE;
break;
case READ:
mask=STREAM_READ;
break;
case UPDATE:
mask=STREAM_UPDATE;
break;
case DELETE:
mask=STREAM_DELETE;
break;
case ALL:
mask=STREAM_ALL;
break;
default :
mask=0;
}
return mask;
}
