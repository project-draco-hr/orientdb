{
  if (debug)   OLogManager.instance().debug(this,"%s - Closing socket...",socket.getRemoteSocketAddress());
  boolean lockAcquired=false;
  try {
    acquireExclusiveLock();
    lockAcquired=true;
  }
 catch (  OTimeoutException e1) {
  }
  try {
    try {
      if (in != null)       in.close();
    }
 catch (    IOException e) {
    }
    try {
      if (out != null)       out.close();
    }
 catch (    IOException e) {
    }
    super.close();
  }
  finally {
    if (lockAcquired)     releaseExclusiveLock();
  }
}
